<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Usuarios</h1>
      <p class="mt-2 text-sm text-gray-700">
        Total: <span class="font-semibold text-indigo-600"><%= @pagy.count %></span> usuarios
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%
        # Determinar ruta y texto según el filtro activo
        if params[:role] == 'driver'
          new_path = new_admin_driver_path
          button_text = "Nuevo Conductor"
          button_class = "bg-green-600 hover:bg-green-700"
        else
          new_path = new_admin_user_path
          button_text = "Nuevo Usuario"
          button_class = "bg-indigo-600 hover:bg-indigo-700"
        end
      %>
      <%= link_to new_path, class: "inline-flex items-center justify-center gap-2 rounded-md #{button_class} px-4 py-2 text-sm font-medium text-white" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= button_text %>
      <% end %>
    </div>
  </div>

  <!-- Filtros -->
  <div class="mt-6 bg-white shadow rounded-lg p-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Filtro por Role -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Tipo de Usuario</label>
        <div class="flex flex-wrap gap-2">
          <%= link_to "Todos", admin_users_path(status: params[:status]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:role].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Admins", admin_users_path(role: 'admin', status: params[:status]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:role] == 'admin' ? 'bg-red-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Clientes", admin_users_path(role: 'customer', status: params[:status]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:role] == 'customer' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Conductores", admin_users_path(role: 'driver', status: params[:status]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:role] == 'driver' ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
        </div>
      </div>

      <!-- Filtro por Estado -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
        <div class="flex flex-wrap gap-2">
          <%= link_to "Todos", admin_users_path(role: params[:role]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Activos", admin_users_path(role: params[:role], status: 'active'),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:status] == 'active' ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Inactivos", admin_users_path(role: params[:role], status: 'inactive'),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:status] == 'inactive' ? 'bg-red-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabla de usuarios -->
  <div class="mt-6 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300 bg-white">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Email</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Rol</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Empresa</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">RUT</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Estado</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Creado</th>
                <th class="px-3 py-3.5 text-center text-xs font-semibold text-gray-900 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @users.each do |user| %>
                <tr class="hover:bg-gray-50">
                  <!-- Email -->
                  <td class="whitespace-nowrap px-3 py-4 text-sm font-medium text-gray-900">
                    <%= user.email %>
                  </td>

                  <!-- Role Badge -->
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <span class="inline-flex rounded-full px-2 py-1 text-xs font-semibold <%= role_badge_classes(user.role) %>">
                      <%= role_text(user.role) %>
                    </span>
                  </td>

                  <!-- Company -->
                  <td class="px-3 py-4 text-sm text-gray-500">
                    <%= user.company.presence || "—" %>
                  </td>

                  <!-- RUT -->
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= format_rut(user.rut) %>
                  </td>

                  <!-- Status Badge -->
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-semibold <%= user_status_badge_classes(user.active) %>">
                      <% if user.active %>
                        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                      <% else %>
                        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                      <% end %>
                      <%= user_status_text(user.active) %>
                    </span>
                  </td>

                  <!-- Created Date -->
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= user.created_at.strftime("%d/%m/%Y") %>
                  </td>

                  <!-- Actions -->
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
                    <div class="flex items-center justify-center gap-2">
                      <%= link_to admin_user_path(user), class: "text-indigo-600 hover:text-indigo-900", title: "Ver detalles" do %>
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      <% end %>
                      <%= link_to edit_admin_user_path(user), class: "text-gray-600 hover:text-gray-900", title: "Editar" do %>
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                      <% unless user.id == current_user.id %>
                        <%= button_to admin_user_path(user), method: :delete, data: { confirm: "¿Estás seguro de eliminar este usuario?" }, class: "text-red-600 hover:text-red-900", title: "Eliminar" do %>
                          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Paginación con Pagy -->
  <div class="mt-6 border-t border-gray-200 bg-white px-4 py-3 sm:px-6 rounded-lg shadow">
    <div class="flex items-center justify-between">
      <div class="flex-1 flex justify-between sm:hidden">
        <% if @pagy.prev %>
          <%= link_to "Anterior", admin_users_path(page: @pagy.prev, role: params[:role], status: params[:status]),
              data: { turbo_prefetch: false },
              class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% else %>
          <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-gray-100 px-4 py-2 text-sm font-medium text-gray-400">Anterior</span>
        <% end %>

        <% if @pagy.next %>
          <%= link_to "Siguiente", admin_users_path(page: @pagy.next, role: params[:role], status: params[:status]),
              data: { turbo_prefetch: false },
              class: "relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% else %>
          <span class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-gray-100 px-4 py-2 text-sm font-medium text-gray-400">Siguiente</span>
        <% end %>
      </div>

      <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Mostrando
            <span class="font-medium"><%= @pagy.from %></span>
            a
            <span class="font-medium"><%= @pagy.to %></span>
            de
            <span class="font-medium"><%= @pagy.count %></span>
            resultados
          </p>
        </div>
        <div>
          <%== pagy_nav(@pagy, pagy_id: 'pagy-nav', link_extra: 'class="relative inline-flex items-center border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"') %>
        </div>
      </div>
    </div>
  </div>
</div>
