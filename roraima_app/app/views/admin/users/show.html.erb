<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header con navegación -->
  <div class="mb-6">
    <%= link_to admin_users_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Volver a Usuarios
    <% end %>
  </div>

  <!-- Título y Estado Principal -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex justify-between items-start">
        <div>
          <div class="flex items-center gap-3">
            <h1 class="text-2xl font-bold text-gray-900"><%= @user.email %></h1>
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= role_badge_classes(@user.role) %>">
              <%= role_text(@user.role) %>
            </span>
            <span class="px-3 py-1 inline-flex items-center text-sm leading-5 font-semibold rounded-full <%= status_badge_classes(@user.active) %>">
              <% if @user.active %>
                <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              <% end %>
              <%= status_text(@user.active) %>
            </span>
          </div>
          <p class="mt-2 text-sm text-gray-600">
            Creado el <%= l(@user.created_at, format: :long) %>
          </p>
        </div>
        <div class="flex gap-2">
          <%= link_to edit_admin_user_path(@user), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar
          <% end %>
          <% unless @user.id == current_user.id %>
            <%= button_to admin_user_path(@user), method: :delete, data: { confirm: "¿Estás seguro de eliminar este usuario?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
              <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Eliminar
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Columna Principal: Detalles -->
    <div class="lg:col-span-2 space-y-6">

      <!-- Información Básica -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Información Básica</h2>
        </div>
        <div class="px-6 py-4">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Tipo de Usuario</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= role_text(@user.role) %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Estado</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= status_text(@user.active) %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Fecha de Registro</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= l(@user.created_at, format: :long) %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Información de Customer -->
      <% if @user.customer? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Información del Cliente</h2>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">RUT</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= format_rut(@user.rut) %></dd>
              </div>

              <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Empresa</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.company.presence || '—' %></dd>
              </div>

              <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <% if @user.phone.present? %>
                    <a href="tel:<%= @user.phone %>" class="text-indigo-600 hover:text-indigo-900"><%= @user.phone %></a>
                  <% else %>
                    —
                  <% end %>
                </dd>
              </div>

              <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Cobro por Envío</dt>
                <dd class="mt-1 text-sm font-semibold text-gray-900"><%= @user.formatted_delivery_charge %></dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- Estadísticas de Paquetes -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Estadísticas de Paquetes</h2>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-2 gap-4 sm:grid-cols-4">
              <div class="text-center">
                <dt class="text-sm font-medium text-gray-500">Total</dt>
                <dd class="mt-1 text-2xl font-bold text-gray-900"><%= @user.packages.count %></dd>
              </div>

              <div class="text-center">
                <dt class="text-sm font-medium text-gray-500">Entregados</dt>
                <dd class="mt-1 text-2xl font-bold text-green-600"><%= @user.packages.entregado.count %></dd>
              </div>

              <div class="text-center">
                <dt class="text-sm font-medium text-gray-500">En Proceso</dt>
                <dd class="mt-1 text-2xl font-bold text-blue-600"><%= @user.packages.en_proceso.count %></dd>
              </div>

              <div class="text-center">
                <dt class="text-sm font-medium text-gray-500">Cancelados</dt>
                <dd class="mt-1 text-2xl font-bold text-red-600"><%= @user.packages.cancelado.count %></dd>
              </div>
            </dl>
          </div>
        </div>
      <% end %>

      <!-- Información de Driver -->
      <% if @user.driver? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Información del Conductor</h2>
          </div>
          <div class="px-6 py-4">
            <div class="rounded-md bg-blue-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-blue-800">
                    Funcionalidad en desarrollo
                  </h3>
                  <div class="mt-2 text-sm text-blue-700">
                    <p>Los detalles específicos para conductores estarán disponibles próximamente.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>

    <!-- Columna Derecha: Información Adicional -->
    <div class="lg:col-span-1">

      <!-- Logo de la Empresa (si existe) -->
      <% if @user.company_logo.attached? %>
        <div class="bg-white shadow rounded-lg mb-6">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Logo de Empresa</h2>
          </div>
          <div class="px-6 py-4 text-center">
            <%= image_tag @user.company_logo, class: "mx-auto h-32 w-auto", alt: "Logo" %>
            <p class="mt-2 text-xs text-gray-500">
              <%= @user.show_logo_on_labels? ? "✓ Mostrar en etiquetas" : "✗ No mostrar en etiquetas" %>
            </p>
          </div>
        </div>
      <% end %>

      <!-- Actividad Reciente -->
      <% if @user.customer? && @user.packages.any? %>
        <div class="bg-white shadow rounded-lg sticky top-6">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Paquetes Recientes</h2>
          </div>
          <div class="px-6 py-4">
            <ul class="divide-y divide-gray-200">
              <% @user.packages.order(created_at: :desc).limit(5).each do |package| %>
                <li class="py-3">
                  <div class="flex items-center justify-between">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= package.tracking_code %>
                      </p>
                      <p class="text-sm text-gray-500 truncate">
                        <%= package.customer_name %>
                      </p>
                    </div>
                    <div class="ml-2 flex-shrink-0">
                      <%= link_to admin_package_path(package), class: "text-indigo-600 hover:text-indigo-900 text-xs" do %>
                        Ver →
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
            <div class="mt-4">
              <%= link_to "Ver todos los paquetes", admin_packages_path(user_id: @user.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
