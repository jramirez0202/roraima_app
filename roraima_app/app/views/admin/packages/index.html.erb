<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Paquetes</h1>
      <p class="mt-2 text-sm text-gray-700">
        Total: <span class="font-semibold text-indigo-600"><%= @pagy.count %></span> paquetes registrados
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to new_admin_package_path, class: "inline-flex items-center justify-center gap-2 rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nuevo Paquete
      <% end %>
    </div>
  </div>

  <!-- Tabs de Filtro -->
  <div class="mt-6 border-b border-gray-200">
    <nav class="-mb-px flex space-x-8" aria-label="Tabs">
      <%= link_to admin_packages_path,
          class: "#{params[:status].blank? ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
        Todos
        <span class="ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium <%= params[:status].blank? ? 'bg-indigo-100 text-indigo-600' : 'bg-gray-100 text-gray-900' %>">
          <%= @total_count %>
        </span>
      <% end %>

      <%= link_to admin_packages_path(status: 'active'),
          class: "#{params[:status] == 'active' ? 'border-green-500 text-green-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
        Activos
        <span class="ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium <%= params[:status] == 'active' ? 'bg-green-100 text-green-600' : 'bg-gray-100 text-gray-900' %>">
          <%= @active_count %>
        </span>
      <% end %>

      <%= link_to admin_packages_path(status: 'cancelled'),
          class: "#{params[:status] == 'cancelled' ? 'border-red-500 text-red-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
        Cancelados
        <span class="ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium <%= params[:status] == 'cancelled' ? 'bg-red-100 text-red-600' : 'bg-gray-100 text-gray-900' %>">
          <%= @cancelled_count %>
        </span>
      <% end %>
    </nav>
  </div>

  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">

          <table class="min-w-full divide-y divide-gray-300 bg-white">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Estado</th>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Fecha Carga</th>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Cliente</th>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Empresa</th>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Tel√©fono</th>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Destino</th>
                <th class="px-3 py-2 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Fecha</th>
                <th class="px-3 py-2 text-center text-xs font-semibold text-gray-900 uppercase tracking-wider w-24">Acciones</th>
              </tr>
            </thead>

            <tbody class="divide-y divide-gray-200">
              <% @packages.each do |package| %>
                <tr class="hover:bg-gray-50">

                  <!-- Estado -->
                  <td class="px-3 py-2 text-sm whitespace-nowrap">
                    <% if package.active? %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Activo</span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Cancelado</span>
                    <% end %>
                  </td>

                  <!-- Fecha Carga -->
                  <td class="px-3 py-2 text-sm">
                    <% if package.pickup_date %>
                      <%= package.pickup_date.strftime("%d/%m/%Y") %>
                    <% else %>
                      <span class="text-gray-400">‚Äî</span>
                    <% end %>
                  </td>

                  <!-- Cliente + Descripci√≥n -->
                  <td class="px-3 py-2 text-sm">
                    <div class="font-medium text-gray-900"><%= package.customer_name %></div>
                    <% if package.description.present? %>
                      <div class="text-xs text-gray-500 truncate max-w-xs"><%= package.description %></div>
                    <% end %>
                  </td>

                  <!-- Empresa -->
                  <td class="px-3 py-2 text-sm">
                    <%= package.company.present? ? package.company : "‚Äî" %>
                  </td>

                  <!-- Tel√©fono -->
                  <td class="px-3 py-2 text-sm">
                    <%= package.phone.present? ? package.phone : "‚Äî" %>
                  </td>

                  <!-- Destino (Comuna + Regi√≥n) -->
                  <td class="px-3 py-2 text-sm">
                    <div><%= package.commune&.name || "‚Äî" %></div>
                    <div class="text-xs text-gray-500"><%= package.region&.name || "‚Äî" %></div>
                  </td>

                  <!-- Fecha Registro -->
                  <td class="px-3 py-2 text-sm">
                    <%= package.created_at.strftime("%d/%m/%Y") %><br>
                    <span class="text-xs text-gray-500"><%= package.created_at.strftime("%H:%M") %></span>
                  </td>

                  <!-- Acciones -->
                  <td class="px-3 py-2 text-sm">
                    <div class="flex items-center justify-center gap-1">
                      <%= link_to edit_admin_package_path(package), class: "p-1.5 text-indigo-600 hover:bg-indigo-50 rounded" do %>
                        ‚úèÔ∏è
                      <% end %>

                      <%= button_to admin_package_path(package), method: :delete, data: { confirm: "¬øEliminar paquete?" }, class: "p-1.5 text-red-600 hover:bg-red-50 rounded" do %>
                        üóëÔ∏è
                      <% end %>
                    </div>
                  </td>

                </tr>
              <% end %>
            </tbody>
          </table>

          <!-- üî• Aqu√≠ integras tu paginado parcial -->
          <%= render "shared/pagination", pagy: @pagy %>

        </div>
      </div>
    </div>
  </div>
</div>
