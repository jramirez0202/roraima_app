<%# Filters Panel - Accordion Expandible %>
<div class="bg-white rounded-lg shadow mb-6" data-controller="filters-panel" data-filters-panel-expanded-value="false">
  <%# Accordion Header %>
  <button type="button"
          class="w-full px-6 py-4 flex items-center justify-between text-left focus:outline-none focus:ring-2 focus:ring-indigo-500"
          data-action="click->filters-panel#toggle">
    <div class="flex items-center">
      <svg class="h-5 w-5 text-gray-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
      </svg>
      <span class="text-lg font-medium text-gray-900">
        Filtros
        <%= filters_count_badge(@active_filters_count) %>
      </span>
    </div>

    <%# Chevron Icon %>
    <svg data-filters-panel-target="chevron"
         class="h-5 w-5 text-gray-500 transition-transform duration-200"
         fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <%# Collapsible Panel %>
  <div data-filters-panel-target="panel" class="hidden border-t border-gray-200">
    <%= form_with url: admin_packages_path, method: :get, class: "px-6 py-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
        <%# Filtro por Estado %>
        <div>
          <%= label_tag :status, "Estado", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= select_tag :status,
                         options_for_select(
                           [["Todos los estados", ""]] + status_select_options,
                           params[:status]
                         ),
                         {
                           class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm"
                         } %>
          <p class="mt-1 text-xs text-gray-500">Estado del paquete</p>
        </div>

        <%# Filtro por Comuna - Autocomplete %>
        <div data-controller="autocomplete"
             data-autocomplete-items-value='<%= communes_json(@communes) %>'
             class="relative">
          <%= label_tag :commune_search, "Comuna", class: "block text-sm font-medium text-gray-700 mb-1" %>

          <%# Search Input %>
          <%= text_field_tag :commune_search,
                             @active_filters[:commune_ids] ? @communes.find_by(id: @active_filters[:commune_ids].first)&.name : nil,
                             {
                               placeholder: "Buscar comuna...",
                               autocomplete: "off",
                               class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm",
                               data: {
                                 autocomplete_target: "input",
                                 action: "input->autocomplete#filter focus->autocomplete#handleFocus"
                               }
                             } %>

          <%# Hidden Field for Commune ID %>
          <%= hidden_field_tag :commune_ids,
                               @active_filters[:commune_ids]&.first,
                               data: { autocomplete_target: "hiddenField" } %>

          <%# Results Dropdown %>
          <div data-autocomplete-target="results"
               class="hidden absolute z-10 w-full mt-1 bg-white rounded-md shadow-lg max-h-60 overflow-auto border border-gray-200">
            <ul data-autocomplete-target="list" class="py-1">
              <%# Results populated by Stimulus %>
            </ul>
          </div>

          <p class="mt-1 text-xs text-gray-500">Escribe para buscar (ej: "Las Condes")</p>
        </div>

        <%# Filtro por Driver - Autocomplete %>
        <div data-controller="autocomplete"
             data-autocomplete-items-value='<%= drivers_json(@couriers) %>'
             class="relative">
          <%= label_tag :courier_search, "Conductor", class: "block text-sm font-medium text-gray-700 mb-1" %>

          <%# Search Input %>
          <% selected_courier = @active_filters[:courier_ids] ? @couriers.find_by(id: @active_filters[:courier_ids].first) : nil %>
          <% courier_label = selected_courier ? (selected_courier.name.present? ? "#{selected_courier.name} - #{selected_courier.vehicle_plate}" : "#{selected_courier.email} - #{selected_courier.vehicle_plate}") : nil %>
          <%= text_field_tag :courier_search,
                             courier_label,
                             {
                               placeholder: "Buscar conductor...",
                               autocomplete: "off",
                               class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm",
                               data: {
                                 autocomplete_target: "input",
                                 action: "input->autocomplete#filter focus->autocomplete#handleFocus"
                               }
                             } %>

          <%# Hidden Field for Courier ID %>
          <%= hidden_field_tag :courier_ids,
                               @active_filters[:courier_ids]&.first,
                               data: { autocomplete_target: "hiddenField" } %>

          <%# Results Dropdown %>
          <div data-autocomplete-target="results"
               class="hidden absolute z-10 w-full mt-1 bg-white rounded-md shadow-lg max-h-60 overflow-auto border border-gray-200">
            <ul data-autocomplete-target="list" class="py-1">
              <%# Results populated by Stimulus %>
            </ul>
          </div>

          <p class="mt-1 text-xs text-gray-500">Escribe nombre o patente</p>
        </div>

        <%# Filtro por Tracking Code %>
        <div>
          <%= label_tag :tracking_query, "Código de Seguimiento", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= text_field_tag :tracking_query,
                             @active_filters[:tracking_query],
                             {
                               placeholder: "PKG-...",
                               class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm",
                               data: { filters_panel_target: "trackingInput" }
                             } %>
          <p class="mt-1 text-xs text-gray-500">Búsqueda parcial, case-insensitive</p>
        </div>

        <%# Filtro por Rango de Fechas %>
        <div>
          <%= label_tag :date_from, "Rango de Fechas", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="space-y-2">
            <%= date_field_tag :date_from,
                               @active_filters[:date_from],
                               {
                                 placeholder: "Desde",
                                 class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm"
                               } %>
            <%= date_field_tag :date_to,
                               @active_filters[:date_to],
                               {
                                 placeholder: "Hasta",
                                 class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm"
                               } %>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            <span class="font-medium text-indigo-600">Por defecto: Últimos 3 días (<%= (Date.current - 2.days).strftime('%d/%m') %> - <%= Date.current.strftime('%d/%m/%Y') %>)</span>
            <br>Especifica rango para cambiar
          </p>
        </div>
      </div>

      <%# Action Buttons %>
      <div class="mt-4 flex items-center justify-between border-t border-gray-200 pt-4">
        <div class="text-sm text-gray-600">
          <%= filtered_results_text(@filtered_count, @total_count) %>
        </div>

        <div class="flex space-x-3">
          <%= link_to "Limpiar Filtros",
                      admin_packages_path,
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

          <%= button_tag type: "submit",
                         class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                         data: { filters_panel_target: "submitBtn" } do %>
            <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            Aplicar Filtros
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
