<%= form_with(model: [:admin, package], class: "space-y-6", id: "package-form", data: { controller: "region-commune", region_commune_url_value: "/admin/communes/by_region", region_commune_selected_commune_value: package.commune_id || "" }) do |form| %>

  <% if package.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(package.errors.count, "error") %> impidieron guardar este paquete:
      </h3>

      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% package.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">

    <!-- FECHA CARGA -->
    <div>
      <%= form.label :pickup_date, "Fecha de Carga", class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :pickup_date, min: Date.today, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- CLIENTE -->
    <div>
      <%= form.label :customer_name, "Nombre del Cliente", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :customer_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- EMPRESA -->
    <div>
      <%= form.label :company, "Empresa", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :company, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- TELEFONO -->
    <div>
      <%= form.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :phone, placeholder: "+56 9 1234 5678", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- REGION -->
    <div>
      <%= form.label :region_id, "Región", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :region_id,
          Region.order(:name),
          :id,
          :name,
          { prompt: "Seleccione región" },
          {
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            data: {
              region_commune_target: "region",
              action: "region-commune#regionChanged"
            }
          } %>
    </div>

    <!-- COMUNA -->
    <div>
      <%= form.label :commune_id, "Comuna", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :commune_id,
          @communes.present? ? options_from_collection_for_select(@communes, :id, :name, form.object.commune_id) : [],
          { prompt: "Primero seleccione región" },
          {
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
            data: { region_commune_target: "commune" }
          } %>
    </div>

    <!-- DIRECCIÓN (DESTINO) -->
    <div>
      <%= form.label :address, "Dirección", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :address, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- ASIGNADO A USUARIO -->
    <div>
      <%= form.label :user_id, "Asignado a usuario", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :user_id, @users, :id, :email,
            { prompt: "Sin asignar" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
    </div>

    <!-- DESCRIPCION -->
    <div>
      <%= form.label :description, "Descripción del Contenido", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- INTERCAMBIO -->
    <div class="flex items-center">
      <div class="flex items-center h-5">
        <%= form.check_box :exchange, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      </div>
      <div class="ml-3">
        <%= form.label :exchange, "Es un paquete de cambio", class: "text-sm font-medium text-gray-700" %>
      </div>
    </div>

  </div>

  <!-- ACCIONES -->
  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", admin_packages_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50" %>
    <%= form.submit "Guardar", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>