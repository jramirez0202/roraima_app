<%= form_with(model: [:admin, package], class: "space-y-6", id: "package-form") do |form| %>

  <% if package.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(package.errors.count, "error") %> impidieron guardar este paquete:
      </h3>

      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% package.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">

    <!-- FECHA CARGA -->
    <div>
      <%= form.label :loading_date, "Fecha de Carga", class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :loading_date, min: Date.current, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- CLIENTE -->
    <div>
      <%= form.label :customer_name, "Nombre del Destinatario", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :customer_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- EMAIL REMITENTE -->
    <div>
      <%= form.label :sender_email, "Email Remitente", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :sender_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- EMPRESA -->
    <div>
      <%= form.label :company_name, "Nombre Empresa", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :company_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- TELEFONO -->
    <div data-controller="phone">
      <%= form.label :phone, "Teléfono *", class: "block text-sm font-medium text-gray-700" %>
      <%= form.telephone_field :phone,
          value: form.object.phone.presence || "+569",
          placeholder: "+56987654321",
          pattern: "^\+569\d{8}$",
          maxlength: "12",
          data: {
            phone_target: "input",
            action: "focus->phone#focus input->phone#input keydown->phone#keydown paste->phone#paste"
          },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      <p class="mt-1 text-xs text-gray-500">Formato: +569XXXXXXXX (12 caracteres)</p>
    </div>

    <!-- REGION (oculto - siempre Región Metropolitana) -->
    <%= form.hidden_field :region_id %>

    <!-- COMUNA -->
    <div>
      <%= form.label :commune_id, "(Región Metropolitana)", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :commune_id,
          @communes.present? ? options_from_collection_for_select(@communes, :id, :name, form.object.commune_id) : [],
          { prompt: "Seleccione comuna" },
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
    </div>

    <!-- DIRECCIÓN (DESTINO) -->
    <div>
      <%= form.label :address, "Dirección", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :address, rows: 3, maxlength: 100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      <p class="mt-1 text-xs text-gray-500">Máximo 100 caracteres</p>
    </div>

    <!-- ASIGNADO A USUARIO -->
    <div>
      <%= form.label :user_id, "Asignado a usuario (Customer) *", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :user_id, @users, :id, :email,
            { prompt: "Seleccione un usuario" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", required: true } %>
      <p class="mt-1 text-xs text-gray-500">Este campo es obligatorio. Solo se muestran usuarios tipo Customer.</p>
    </div>

    <!-- DESCRIPCION -->
    <div>
      <%= form.label :description, "Descripción del Contenido", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, maxlength: 100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      <p class="mt-1 text-xs text-gray-500">Máximo 100 caracteres</p>
    </div>

    <!-- DEVOLUCION -->
    <div class="flex items-center">
      <div class="flex items-center h-5">
        <%= form.check_box :exchange, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      </div>
      <div class="ml-3">
        <%= form.label :exchange, "Devolucion?", class: "text-sm font-medium text-gray-700" %>
      </div>
    </div>

    <!-- MONTO -->
    <div>
      <%= form.label :amount, "Monto", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :amount, value: form.object.amount || 0, step: "1", min: "0", placeholder: "100000", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      <p class="mt-1 text-xs text-gray-500">Ingresar solo números (ej: 100000 para $100.000 CLP)</p>
    </div>

  </div>

  <!-- ACCIONES -->
  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", admin_packages_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50" %>
    <%= form.submit "Guardar", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>