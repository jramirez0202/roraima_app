<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-800"><%= @zone.name %></h1>
      <p class="text-gray-600 mt-1">
        <%= @zone.region&.name || "Sin región asignada" %>
        <% if @zone.active? %>
          <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
            Activa
          </span>
        <% else %>
          <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
            Inactiva
          </span>
        <% end %>
      </p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Editar", edit_admin_zone_path(@zone), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Volver", admin_zones_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Información General -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Información General</h2>

      <div class="space-y-3">
        <div>
          <p class="text-sm text-gray-600">Región</p>
          <p class="text-base font-medium text-gray-900"><%= @zone.region&.name || "Sin región" %></p>
        </div>

        <div>
          <p class="text-sm text-gray-600">Total de Comunas</p>
          <p class="text-base font-medium text-gray-900">
            <%= @zone.communes.present? ? @zone.communes.count : 0 %> comunas
          </p>
        </div>

        <div>
          <p class="text-sm text-gray-600">Drivers Asignados</p>
          <p class="text-base font-medium text-gray-900">
            <%= @drivers.count %> drivers
          </p>
        </div>

        <div>
          <p class="text-sm text-gray-600">Estado</p>
          <p class="text-base font-medium">
            <% if @zone.active? %>
              <span class="text-green-600">Activa</span>
            <% else %>
              <span class="text-red-600">Inactiva</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <!-- Comunas Asignadas -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">
        Comunas Asignadas (<%= @communes&.count || 0 %>)
      </h2>

      <% if @communes&.any? %>
        <div class="max-h-64 overflow-y-auto">
          <ul class="space-y-2">
            <% @communes.each do |commune| %>
              <li class="flex items-center p-2 hover:bg-gray-50 rounded">
                <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-800"><%= commune.name %></span>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No hay comunas asignadas a esta zona</p>
      <% end %>
    </div>
  </div>

  <!-- Drivers Asignados -->
  <div class="mt-6 bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">
      Drivers Asignados (<%= @drivers.count %>)
    </h2>

    <% if @drivers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teléfono</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vehículo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @drivers.each do |driver| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= driver.email %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= driver.phone %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= driver.vehicle_plate %> - <%= driver.vehicle_model %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if driver.active? %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      Activo
                    </span>
                  <% else %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                      Inactivo
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Ver", admin_driver_path(driver), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 italic">No hay drivers asignados a esta zona aún.</p>
      <p class="text-sm text-gray-600 mt-2">
        Los drivers se asignan a zonas desde la
        <%= link_to "gestión de drivers", admin_drivers_path, class: "text-blue-600 hover:text-blue-800" %>.
      </p>
    <% end %>
  </div>
</div>
