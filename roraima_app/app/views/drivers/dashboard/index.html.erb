<div class="px-4 sm:px-0">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Dashboard del Conductor</h1>

  <!-- Tarjetas de Estad칤sticas -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <!-- Paquetes Pendientes -->
    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-yellow-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Paquetes Pendientes</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:pending] %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Entregas de Hoy -->
    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-green-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Entregados Hoy</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:today] %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Asignados -->
    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-blue-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Asignados Hoy</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:total_assigned] %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Reprogramados Persistentes -->
    <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="rounded-md bg-orange-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Reprogramados</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:rescheduled] %></div>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <% if @stats[:rescheduled] > 0 %>
        <div class="bg-orange-50 px-5 py-3 border-t border-orange-100">
          <div class="text-xs text-orange-700">
            <span class="font-semibold">Persistentes:</span> No desaparecen hasta ser cerrados
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Paquetes Pendientes de Entrega -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <div>
        <h2 class="text-xl font-semibold text-gray-900">Paquetes Pendientes de Entrega</h2>
        <% if current_driver.on_route? %>
          <p class="text-sm text-blue-600 mt-1">
            游뚴 Ruta iniciada a las <%= current_driver.route_started_at.strftime('%H:%M') %>
          </p>
        <% end %>
      </div>

      <!-- Bot칩n Iniciar Ruta con estados condicionales -->
      <% if current_driver.can_start_route? %>
        <%= button_to drivers_start_route_path, method: :post,
            class: "inline-flex items-center gap-2 rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white hover:bg-green-700 shadow-sm transition-colors",
            data: { confirm: "쮼st치s seguro de iniciar tu ruta? Esto registrar치 el inicio de tus entregas." } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          Iniciar Ruta
        <% end %>
      <% elsif Setting.require_driver_authorization? && !current_driver.ready_for_route? %>
        <div class="text-right">
          <button disabled class="inline-flex items-center gap-2 rounded-md bg-gray-300 px-4 py-2 text-sm font-semibold text-gray-500 cursor-not-allowed">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            No Autorizado
          </button>
          <p class="text-xs text-gray-500 mt-1">Contacta al administrador</p>
        </div>
      <% elsif @stats[:pending].zero? %>
        <button disabled class="inline-flex items-center gap-2 rounded-md bg-gray-300 px-4 py-2 text-sm font-semibold text-gray-500 cursor-not-allowed">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          Sin Paquetes
        </button>
      <% elsif current_driver.on_route? %>
        <span class="inline-flex items-center gap-2 rounded-md bg-blue-100 px-4 py-2 text-sm font-semibold text-blue-800">
          <svg class="w-5 h-5 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          Ruta en Progreso
        </span>
      <% end %>
    </div>
    <div class="overflow-x-auto">
      <% if @pending_packages.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Tracking
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Destinatario
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Direcci칩n
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Estado
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Fecha Asignaci칩n
              </th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Acciones
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @pending_packages.each do |package| %>
              <tr class="hover:bg-gray-50 <%= 'bg-orange-50' if package.rescheduled? %>">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= package.tracking_code %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= package.customer_name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= package.address %><br>
                  <span class="text-xs text-gray-500"><%= package.commune&.name %>, <%= package.region&.name %></span>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-col items-start">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(package.status) %>">
                      <%= status_text(package.status) %>
                    </span>
                    <% if (package.delivered? || package.picked_up?) && package.delivered_at %>
                      <span class="mt-1 text-xs text-gray-500">
                        <%= package.delivered_at.strftime('%d/%m/%y %H:%M') %>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-500">
                    <%= package.assigned_at&.strftime('%d/%m/%Y') || '-' %>
                  </div>
                  <% if package.rescheduled? %>
                    <% days_ago = (Date.current - package.assigned_at.to_date).to_i %>
                    <div class="text-xs text-orange-600 font-semibold mt-1">
                      游늰 Hace <%= days_ago %> <%= days_ago == 1 ? 'd칤a' : 'd칤as' %>
                    </div>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Ver Detalle", drivers_package_path(package), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No hay paquetes pendientes</h3>
          <p class="mt-1 text-sm text-gray-500">Todos tus paquetes han sido entregados.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Entregas de Hoy -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Entregas de Hoy</h2>
    </div>
    <div class="overflow-x-auto">
      <% if @today_deliveries.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Tracking
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Destinatario
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Hora de Entrega
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Fecha Asignaci칩n
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Estado
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Acciones
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @today_deliveries.each do |package| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= package.tracking_code %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= package.customer_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= package.delivered_at&.strftime('%d/%m/%Y %H:%M') || '-' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= package.assigned_at&.strftime('%d/%m/%Y %H:%M') || '-' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(package.status) %>">
                    <%= status_text(package.status) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "Ver", drivers_package_path(package), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No hay entregas completadas</h3>
          <p class="mt-1 text-sm text-gray-500">A칰n no has realizado entregas el d칤a de hoy.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
