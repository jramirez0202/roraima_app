<div class="px-4 sm:px-0">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Mis Paquetes Asignados</h1>
  </div>

  <!-- Filtros -->
  <%= render 'shared/simple_filters',
             form_url: drivers_packages_path,
             clear_url: drivers_packages_path,
             active_filters: @active_filters,
             active_filters_count: @active_filters_count,
             filtered_count: @filtered_count,
             total_count: @total_count %>

  <!-- Contadores de Estado -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6 mb-6">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">
          Resumen de Estados
          <% unless @filter_date == Date.current %>
            <span class="text-sm font-normal text-gray-500">(<%= l(@filter_date, format: :short) %>)</span>
          <% end %>
        </h2>
        <% if current_driver.on_route? %>
          <p class="text-sm text-blue-600 mt-1">
            游뚴 Ruta iniciada a las <%= current_driver.route_started_at.strftime('%H:%M') %>
          </p>
        <% end %>
      </div>

      <!-- Botones de Control de Ruta -->
      <div class="flex gap-2">
        <% if current_driver.can_start_route? && @status_counters[:pending] > 0 %>
          <%= button_to drivers_start_route_path, method: :post,
              class: "inline-flex items-center gap-2 rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white hover:bg-green-700 shadow-sm transition-colors",
              data: { confirm: "쮼st치s seguro de iniciar tu ruta? Esto registrar치 el inicio de tus entregas." } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Iniciar Ruta
          <% end %>
        <% elsif current_driver.on_route? %>
          <button type="button"
                  data-controller="route-complete"
                  data-action="click->route-complete#showModal"
                  data-route-complete-pending-count-value="<%= @status_counters[:pending] %>"
                  class="inline-flex items-center gap-2 rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700 shadow-sm transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Finalizar Ruta
          </button>
        <% elsif @status_counters[:pending] == 0 && !current_driver.on_route? %>
          <button disabled class="inline-flex items-center gap-2 rounded-md bg-gray-300 px-4 py-2 text-sm font-semibold text-gray-500 cursor-not-allowed">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
            </svg>
            Sin Paquetes Pendientes
          </button>
        <% end %>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      <!-- Pendiente -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-yellow-100 border border-yellow-300">
        <span class="text-yellow-800 font-semibold">Pendiente:</span>
        <span class="text-xl font-bold text-yellow-900"><%= @status_counters[:pending] %></span>
      </div>

      <!-- Entregado -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-100 border border-green-300">
        <span class="text-green-800 font-semibold">Entregado:</span>
        <span class="text-xl font-bold text-green-900"><%= @status_counters[:delivered] %></span>
      </div>

      <!-- Reprogramado -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-orange-100 border border-orange-300">
        <span class="text-orange-800 font-semibold">Reprogramado:</span>
        <span class="text-xl font-bold text-orange-900"><%= @status_counters[:rescheduled] %></span>
      </div>

      <!-- Cancelado -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-100 border border-red-300">
        <span class="text-red-800 font-semibold">Cancelado:</span>
        <span class="text-xl font-bold text-red-900"><%= @status_counters[:cancelled] %></span>
      </div>
    </div>
  </div>

  <!-- Tabla de Paquetes -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
    <% if @packages.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Tracking
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Destinatario
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Direcci칩n
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Comuna
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Estado
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Fecha Asignaci칩n
              </th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Acciones
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @packages.each do |package| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= package.tracking_code %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= package.customer_name %></div>
                  <div class="text-xs text-gray-500"><%= package.phone %></div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= truncate(package.address, length: 40) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= package.commune&.name %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-col items-start">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(package.status) %>">
                      <%= status_text(package.status) %>
                    </span>
                    <% if (package.delivered? || package.picked_up?) && package.delivered_at %>
                      <span class="mt-1 text-xs text-gray-500">
                        <%= package.delivered_at.strftime('%d/%m/%y %H:%M') %>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= package.assigned_at&.strftime('%d/%m/%Y %H:%M') || '-' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Ver", drivers_package_path(package), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay paquetes</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if params[:status].present? || params[:commune_id].present? %>
            No se encontraron paquetes con los filtros aplicados.
          <% else %>
            No tienes paquetes asignados en este momento.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>

  <% if @packages.any? %>
    <div class="mt-4 text-sm text-gray-600">
      Total: <%= @packages.count %> paquete(s)
    </div>
  <% end %>
</div>
