<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to customers_profile_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Volver al Perfil
    <% end %>
  </div>

  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center gap-4">
        <%= render 'shared/customer_logo_header' %>
        <h1 class="text-2xl font-bold text-gray-900">Editar Perfil</h1>
      </div>
    </div>

    <div class="px-6 py-6">
      <%= form_with(model: @user, url: customers_profile_path, method: :patch, local: true, multipart: true, class: "space-y-6") do |form| %>

        <% if @user.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@user.errors.count, "error") %> impidieron actualizar el perfil:
            </h3>

            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :name, "Nombre Personal", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, autocomplete: "name", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Tu nombre completo</p>
        </div>

        <div>
          <%= form.label :company, "Nombre de la Empresa", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :company, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Nombre de tu empresa o negocio</p>
        </div>

        <div data-controller="phone">
          <%= form.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700" %>
          <%= form.telephone_field :phone,
              value: form.object.phone.presence || "+569",
              placeholder: "+56987654321",
              pattern: "^\\+569\\d{8}$",
              maxlength: "12",
              data: {
                phone_target: "input",
                action: "focus->phone#focus input->phone#input keydown->phone#keydown paste->phone#paste"
              },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Formato: +569XXXXXXXX (12 caracteres)</p>
        </div>

        <div class="pt-6 border-t border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Logo de Empresa</h3>

          <% if @user.company_logo.attached? && @user.company_logo.persisted? %>
            <div class="mb-4">
              <p class="text-sm text-gray-500 mb-2">Logo actual:</p>
              <div class="flex items-start space-x-4">
                <%= image_tag @user.company_logo, class: "h-24 w-24 object-contain border border-gray-200 rounded p-2 bg-white" %>
                <div class="flex-1">
                  <p class="text-sm text-gray-700 mb-2"><%= @user.company_logo.filename %></p>
                  <label class="inline-flex items-center">
                    <%= check_box_tag :remove_logo, '1', false, class: "rounded border-gray-300 text-red-600 shadow-sm focus:border-red-500 focus:ring-red-500" %>
                    <span class="ml-2 text-sm text-red-600">Eliminar logo</span>
                  </label>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.label :company_logo, "Subir nuevo logo", class: "block text-sm font-medium text-gray-700" %>
            <%= form.file_field :company_logo, accept: "image/png,image/gif", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
            <p class="mt-1 text-sm text-gray-500">Solo PNG o GIF con fondo transparente (máximo 5MB)</p>
            <p class="mt-1 text-sm text-gray-400">El logo se mostrará en la esquina superior izquierda de tus etiquetas de envío</p>
          </div>

          <div class="mt-4">
            <label class="inline-flex items-center">
              <%= form.check_box :show_logo_on_labels, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
              <span class="ml-2 text-sm text-gray-700">Mostrar mi logo en las etiquetas de envío</span>
            </label>
            <p class="mt-1 ml-6 text-sm text-gray-500">Puedes activar o desactivar esta opción en cualquier momento</p>
          </div>
        </div>

        <div class="pt-6 border-t border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Cambiar Contraseña</h3>
          <p class="text-sm text-gray-500 mb-4">Deja estos campos en blanco si no deseas cambiar tu contraseña</p>

          <div class="space-y-4">
            <div>
              <%= form.label :password, "Nueva Contraseña", class: "block text-sm font-medium text-gray-700" %>
              <%= form.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <p class="mt-1 text-sm text-gray-500">Mínimo 6 caracteres</p>
            </div>

            <div>
              <%= form.label :password_confirmation, "Confirmar Nueva Contraseña", class: "block text-sm font-medium text-gray-700" %>
              <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3 pt-6">
          <%= link_to "Cancelar", customers_profile_path, class: "inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50" %>
          <%= form.submit "Guardar Cambios", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
