<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Resultado de Carga Masiva</h1>
    <p class="mt-2 text-sm text-gray-600">Revisa el estado y resultados del procesamiento</p>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <% if @bulk_upload.pending? %>
        <!-- Estado: Pendiente -->
        <div class="mb-6">
          <div class="flex items-center mb-4">
            <svg class="h-5 w-5 text-yellow-500 mr-2 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <span class="text-lg font-semibold text-gray-900">Esperando procesamiento...</span>
          </div>
          <p class="text-sm text-gray-600">Tu carga está en cola. El procesamiento comenzará en breve.</p>
        </div>

        <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-blue-700">
                Actualiza esta página en unos momentos para ver el progreso.
              </p>
            </div>
          </div>
        </div>

      <% elsif @bulk_upload.processing? %>
        <!-- Estado: Procesando -->
        <div class="mb-6">
          <div class="flex items-center mb-4">
            <svg class="animate-spin h-5 w-5 text-indigo-600 mr-2" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-lg font-semibold text-gray-900">Procesando paquetes...</span>
          </div>

          <% if @bulk_upload.total_rows.present? && @bulk_upload.total_rows > 0 %>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-sm font-medium text-gray-500">Total de filas</div>
                <div class="mt-1 text-2xl font-semibold text-gray-900">
                  <%= @bulk_upload.total_rows %>
                </div>
              </div>

              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-sm font-medium text-gray-500">Procesadas</div>
                <div class="mt-1 text-2xl font-semibold text-gray-900">
                  <%= @bulk_upload.processed_count || 0 %>
                </div>
              </div>

              <div class="bg-gray-50 rounded-lg p-4">
                <div class="text-sm font-medium text-gray-500">Progreso</div>
                <div class="mt-1 text-2xl font-semibold text-gray-900">
                  <%= @bulk_upload.progress_percentage %>%
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-blue-700">
                El proceso está en ejecución. Actualiza esta página para ver el progreso actualizado.
              </p>
            </div>
          </div>
        </div>

      <% elsif @bulk_upload.completed? %>
        <!-- Estado: Completado -->
        <div class="mb-6">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-lg font-semibold text-gray-900">Carga completada</span>
          </div>

          <!-- Resumen de resultados -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="text-sm font-medium text-gray-500">Total procesado</div>
              <div class="mt-1 text-2xl font-semibold text-gray-900">
                <%= @bulk_upload.total_rows %>
              </div>
            </div>

            <div class="bg-green-50 rounded-lg p-4">
              <div class="text-sm font-medium text-green-600">Exitosos</div>
              <div class="mt-1 text-2xl font-semibold text-green-700">
                <%= @bulk_upload.successful_rows %>
              </div>
            </div>

            <div class="bg-red-50 rounded-lg p-4">
              <div class="text-sm font-medium text-red-600">Fallidos</div>
              <div class="mt-1 text-2xl font-semibold text-red-700">
                <%= @bulk_upload.failed_rows %>
              </div>
            </div>
          </div>

          <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-green-700">
                  <strong><%= @bulk_upload.successful_rows %> paquetes</strong> fueron creados exitosamente.
                  <% if @bulk_upload.failed_rows > 0 %>
                    <strong><%= @bulk_upload.failed_rows %> paquetes</strong> tuvieron errores.
                  <% end %>
                </p>
              </div>
            </div>
          </div>

          <% if @bulk_upload.failed_rows > 0 && @bulk_upload.error_details.present? %>
            <!-- Lista de errores -->
            <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3 flex-1">
                  <h3 class="text-sm font-medium text-red-800 mb-2">Errores encontrados:</h3>
                  <div class="text-sm text-red-700 max-h-96 overflow-y-auto">
                    <ul class="list-disc list-inside space-y-1 font-mono text-xs">
                      <% @bulk_upload.formatted_errors.each do |error| %>
                        <li><%= error %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      <% elsif @bulk_upload.failed? %>
        <!-- Estado: Fallido -->
        <div class="mb-6">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <span class="text-lg font-semibold text-gray-900">La carga falló</span>
          </div>

          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  Hubo un error al procesar la carga masiva. Por favor revisa los errores a continuación e intenta nuevamente.
                </p>
              </div>
            </div>
          </div>

          <% if @bulk_upload.error_details.present? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
              <h3 class="text-sm font-medium text-red-800 mb-2">Errores encontrados:</h3>
              <div class="text-sm text-red-700 max-h-96 overflow-y-auto">
                <ul class="list-disc list-inside space-y-1 font-mono text-xs">
                  <% @bulk_upload.formatted_errors.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Botones de acción -->
      <div class="flex gap-3 mt-6">
        <%= link_to customers_packages_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          Ver paquetes
        <% end %>

        <% if @bulk_upload.failed? || (@bulk_upload.completed? && @bulk_upload.failed_rows > 0) %>
          <%= link_to new_customers_bulk_upload_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Intentar nueva carga
          <% end %>
        <% end %>

        <% if @bulk_upload.pending? || @bulk_upload.processing? %>
          <%= link_to customers_bulk_upload_path(@bulk_upload), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Actualizar
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
