<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Navegación -->
  <div class="mb-6">
    <%= link_to customers_packages_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Volver a Mis Paquetes
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Columna Principal: Detalles -->
    <div class="lg:col-span-2 space-y-6">

      <!-- Header con estado -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex justify-between items-start">
            <div>
              <h1 class="text-2xl font-bold text-gray-900">Paquete #<%= @package.tracking_code %></h1>
              <p class="mt-1 text-sm text-gray-600">
                Destinatario: <span class="font-medium"><%= @package.customer_name %></span>
              </p>
            </div>
            <div class="text-right">
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= status_badge_classes(@package.status) %>">
                <%= status_text(@package.status) %>
              </span>
              <% if @package.delivered? && @package.delivered_at %>
                <p class="mt-1 text-xs text-gray-600">
                  <%= l(@package.delivered_at, format: :short) %>
                </p>
              <% end %>
            </div>
          </div>

          <!-- Alerta para estados terminales -->
          <% if @package.terminal? %>
            <div class="mt-4 p-4 rounded-md <%= @package.delivered? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
              <div class="flex">
                <div class="flex-shrink-0">
                  <% if @package.delivered? %>
                    <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  <% else %>
                    <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium <%= @package.delivered? ? 'text-green-800' : 'text-gray-800' %>">
                    <%= status_text(@package.status) %>
                  </h3>
                  <% if @package.delivered_at %>
                    <p class="mt-1 text-sm <%= @package.delivered? ? 'text-green-700' : 'text-gray-700' %>">
                      Completado el <%= l(@package.delivered_at, format: :long) %>
                    </p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Información de Tracking -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Información de Seguimiento</h2>
        </div>
        <div class="px-6 py-4">
          <dl class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Código de Tracking</dt>
              <dd class="mt-1 text-sm font-mono font-semibold text-gray-900"><%= @package.tracking_code %></dd>
            </div>
            <div>
              <dt class="text-xs font-medium text-gray-500 uppercase">Estado Actual</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= status_text(@package.status) %></dd>
            </div>
            <% if @package.location.present? %>
              <div class="col-span-2">
                <dt class="text-xs font-medium text-gray-500 uppercase">Ubicación Actual</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <svg class="inline h-4 w-4 text-gray-400 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <%= @package.location %>
                </dd>
              </div>
            <% end %>
            <% if @package.loading_date %>
              <div>
                <dt class="text-xs font-medium text-gray-500 uppercase">Fecha de Carga</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= l(@package.loading_date, format: :long) %></dd>
              </div>
            <% end %>
            <% if @package.reprogramed_to %>
              <div>
                <dt class="text-xs font-medium text-gray-500 uppercase">Reprogramado Para</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= l(@package.reprogramed_to, format: :long) %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>

      <!-- Detalles del Paquete -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Detalles de Entrega</h2>
        </div>
        <div class="px-6 py-4">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Nombre del Destinatario</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @package.customer_name %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Empresa</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @package.company_name.presence || '—' %></dd>
            </div>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Dirección</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @package.address %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Comuna</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @package.commune&.name || '—' %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @package.phone.present? %>
                  <a href="tel:<%= @package.phone %>" class="text-indigo-600 hover:text-indigo-900"><%= @package.phone %></a>
                <% else %>
                  —
                <% end %>
              </dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Fecha de Carga</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= l(@package.loading_date, format: :long) if @package.loading_date %></dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Intercambio</dt>
              <dd class="mt-1">
                <% if @package.exchange %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Sí</span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">No</span>
                <% end %>
              </dd>
            </div>

            <div class="sm:col-span-1">
              <dt class="text-sm font-medium text-gray-500">Monto</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @package.formatted_amount %></dd>
            </div>

            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Descripción</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @package.description.presence || '—' %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Botón de editar (solo si está en estado pending_pickup) -->
      <% if policy(@package).update? %>
        <div class="flex gap-3">
          <%= link_to edit_customers_package_path(@package), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar Paquete
          <% end %>
        </div>
      <% end %>

    </div>

    <!-- Columna Derecha: Timeline Simplificado -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow rounded-lg sticky top-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Seguimiento</h2>
        </div>
        <div class="px-6 py-4">
          <% if @package.status_history.present? %>
            <div class="flow-root">
              <ul role="list" class="-mb-8">
                <% @package.status_history.reverse.each_with_index do |entry, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% unless index == @package.status_history.length - 1 %>
                        <span class="absolute left-3 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex space-x-3">
                        <div>
                          <span class="h-6 w-6 rounded-full <%= status_badge_classes(entry['status']) %> flex items-center justify-center ring-4 ring-white">
                            <span class="h-2 w-2 rounded-full bg-white"></span>
                          </span>
                        </div>
                        <div class="flex min-w-0 flex-1 flex-col">
                          <div>
                            <p class="text-sm font-medium text-gray-900">
                              <%= status_text(entry['status']) %>
                            </p>
                            <p class="mt-0.5 text-xs text-gray-500">
                              <%= Time.parse(entry['timestamp']).strftime('%d/%m/%y %H:%M') rescue entry['timestamp'] %>
                            </p>
                          </div>
                          <% if entry['location'].present? %>
                            <p class="mt-1 text-xs text-gray-600">
                              <svg class="inline h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                              </svg>
                              <%= entry['location'] %>
                            </p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No hay información de seguimiento disponible.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
