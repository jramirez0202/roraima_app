<!DOCTYPE html>
<html>
  <head>
    <title>Roraima App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <% if user_signed_in? %>
      <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex">
              <div class="flex-shrink-0 flex items-center">
                <%= link_to root_path, class: "text-xl font-bold text-gray-900 hover:text-gray-700" do %>
                  ðŸ“¦ PaqueterÃ­a
                <% end %>
              </div>
              <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                <% if current_user.admin? %>
                  <%= link_to "Paquetes", admin_packages_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                  <%= link_to "Usuarios", admin_users_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                  <%= link_to "Conductores", admin_drivers_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                  <%= link_to "ConfiguraciÃ³n", admin_settings_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                <% else %>
                  <%= link_to "Dashboard", customers_dashboard_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                  <%= link_to "Mis Paquetes", customers_packages_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                  <%= link_to "Mi Perfil", customers_profile_path, data: { turbo_prefetch: false }, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900 border-b-2 border-transparent hover:border-gray-300" %>
                <% end %>
              </div>
            </div>
            <div class="flex items-center">
              <span class="text-sm text-gray-700 mr-4">
                <%= current_user.email %>
                <span class="ml-2 px-2 py-1 text-xs font-medium rounded-full <%= current_user.admin? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                  <%= current_user.role.titleize %>
                </span>
              </span>
              <%= button_to "Cerrar sesiÃ³n", destroy_user_session_path, method: :delete, class: "text-sm text-red-600 hover:text-red-800" %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <% if notice %>
        <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded shadow-sm">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">
                <%= notice %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded shadow-sm">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800">
                <%= alert %>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>