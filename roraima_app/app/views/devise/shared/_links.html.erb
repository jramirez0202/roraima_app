<!-- Enlaces compartidos de Devise - Estilizados -->
<div class="space-y-3 text-center">

  <!-- Enlace a Login (si no estamos en login) -->
  <%- if controller_name != 'sessions' %>
    <div class="text-sm">
      <span class="text-gray-600">¿Ya tienes cuenta?</span>
      <%= link_to "Inicia sesión", new_session_path(resource_name),
          class: "font-medium text-violet-600 hover:text-violet-800 ml-1 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <!-- Enlace a Registro (si no estamos en registro) -->
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-sm">
      <span class="text-gray-600">¿No tienes cuenta?</span>
      <%= link_to "Regístrate", new_registration_path(resource_name),
          class: "font-medium text-violet-600 hover:text-violet-800 ml-1 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <!-- Enlace a Recuperar Contraseña (solo si no estamos en passwords o registrations) -->
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-sm">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name),
          class: "font-medium text-violet-600 hover:text-violet-800 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <!-- Enlace a Confirmación (si está habilitado) -->
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-sm">
      <%= link_to "¿No recibiste instrucciones de confirmación?", new_confirmation_path(resource_name),
          class: "font-medium text-violet-600 hover:text-violet-800 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <!-- Enlace a Desbloqueo (si está habilitado) -->
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-sm">
      <%= link_to "¿No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name),
          class: "font-medium text-violet-600 hover:text-violet-800 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <!-- Enlaces de OAuth (si está habilitado) -->
  <%- if devise_mapping.omniauthable? %>
    <div class="mt-6">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">O continúa con</span>
        </div>
      </div>

      <div class="mt-6 space-y-3">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Iniciar con #{OmniAuth::Utils.camelize(provider)}",
              omniauth_authorize_path(resource_name, provider),
              data: { turbo: false },
              class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition duration-150 ease-in-out" %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
