    <!-- Formulario de carga -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <%= form_with model: @bulk_upload, url: customers_bulk_uploads_path, local: true, class: "space-y-6", id: "upload-form" do |f| %>
        <% if @bulk_upload.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error:</strong>
            <ul class="list-disc list-inside mt-2">
              <% @bulk_upload.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <% if defined?(@validation_errors) && @validation_errors.present? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-6" role="alert">
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <div class="ml-3 flex-1">
