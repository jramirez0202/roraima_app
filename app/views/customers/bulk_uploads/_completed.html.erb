<% if bulk_upload.completed? %>
  <!-- Estado: Completado -->
  <div class="mb-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span class="text-lg font-semibold text-gray-900">Carga completada</span>
    </div>

    <!-- Resumen de resultados -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="text-sm font-medium text-gray-500">Total procesado</div>
        <div class="mt-1 text-2xl font-semibold text-gray-900">
          <%= bulk_upload.total_rows %>
        </div>
      </div>

      <div class="bg-green-50 rounded-lg p-4">
        <div class="text-sm font-medium text-green-600">Exitosos</div>
        <div class="mt-1 text-2xl font-semibold text-green-700">
          <%= bulk_upload.successful_rows %>
        </div>
      </div>

      <div class="bg-red-50 rounded-lg p-4">
        <div class="text-sm font-medium text-red-600">Fallidos</div>
        <div class="mt-1 text-2xl font-semibold text-red-700">
          <%= bulk_upload.failed_rows %>
        </div>
      </div>
    </div>

    <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-green-700">
            <strong><%= bulk_upload.successful_rows %> paquetes</strong> fueron creados exitosamente.
            <% if bulk_upload.failed_rows > 0 %>
              <strong><%= bulk_upload.failed_rows %> paquetes</strong> tuvieron errores.
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <% if bulk_upload.failed_rows > 0 && bulk_upload.error_details.present? %>
      <!-- Lista de errores -->
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-red-800 mb-2">Errores encontrados:</h3>
            <div class="text-sm text-red-700 max-h-60 overflow-y-auto">
              <ul class="list-disc list-inside space-y-1">
                <% bulk_upload.formatted_errors.first(20).each do |error| %>
                  <li><%= error %></li>
                <% end %>
                <% if bulk_upload.formatted_errors.length > 20 %>
                  <li class="text-red-600 font-medium">... y <%= bulk_upload.formatted_errors.length - 20 %> errores más</li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex gap-3">
      <%= link_to customers_packages_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        Ver mis paquetes
      <% end %>

      <% if bulk_upload.failed_rows > 0 %>
        <%= link_to new_customers_bulk_upload_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          Intentar nueva carga
        <% end %>
      <% end %>
    </div>
  </div>

<% else %>
  <!-- Estado: Fallido -->
  <div class="mb-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <span class="text-lg font-semibold text-gray-900">La carga falló</span>
    </div>

    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700">
            Hubo un error al procesar la carga masiva. Por favor revisa los errores a continuación e intenta nuevamente.
          </p>
        </div>
      </div>
    </div>

    <% if bulk_upload.error_details.present? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
        <h3 class="text-sm font-medium text-red-800 mb-2">Errores encontrados:</h3>
        <div class="text-sm text-red-700 max-h-60 overflow-y-auto">
          <ul class="list-disc list-inside space-y-1">
            <% bulk_upload.formatted_errors.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="flex gap-3">
      <%= link_to new_customers_bulk_upload_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        Intentar nueva carga
      <% end %>

      <%= link_to customers_packages_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        Volver a mis paquetes
      <% end %>
    </div>
  </div>
<% end %>
