<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <div class="p-6">
    <% if bulk_upload.in_progress? %>
      <!-- Estado: Procesando -->
      <div class="mb-6">
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center">
            <svg class="animate-spin h-5 w-5 text-indigo-600 mr-2" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-lg font-semibold text-gray-900">Procesando paquetes...</span>
          </div>
          <span class="text-sm font-medium text-indigo-600"><%= bulk_upload.progress_percentage %>%</span>
        </div>

        <!-- Barra de progreso -->
        <div class="w-full bg-gray-200 rounded-full h-3 mb-4">
          <div class="bg-indigo-600 h-3 rounded-full transition-all duration-500" style="width: <%= bulk_upload.progress_percentage %>%"></div>
        </div>

        <!-- Información de progreso -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="text-sm font-medium text-gray-500">Filas procesadas</div>
            <div class="mt-1 text-2xl font-semibold text-gray-900">
              <%= bulk_upload.processed_count %> / <%= bulk_upload.total_rows %>
            </div>
          </div>

          <div class="bg-green-50 rounded-lg p-4">
            <div class="text-sm font-medium text-green-600">Exitosos</div>
            <div class="mt-1 text-2xl font-semibold text-green-700">
              <%= bulk_upload.successful_rows %>
            </div>
          </div>

          <div class="bg-red-50 rounded-lg p-4">
            <div class="text-sm font-medium text-red-600">Fallidos</div>
            <div class="mt-1 text-2xl font-semibold text-red-700">
              <%= bulk_upload.failed_rows %>
            </div>
          </div>
        </div>

        <% if bulk_upload.current_row.present? %>
          <div class="mt-4 text-sm text-gray-600">
            Procesando fila <%= bulk_upload.current_row %>...
          </div>
        <% end %>
      </div>

      <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              Por favor mantén esta página abierta. El progreso se actualiza automáticamente en tiempo real.
            </p>
          </div>
        </div>
      </div>

      <div class="flex gap-3 mt-6">
        <%= link_to customers_packages_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" do %>
          Ver mis paquetes
        <% end %>

        <%= link_to customers_bulk_upload_path(bulk_upload), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50", data: { turbo: false } do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Actualizar
        <% end %>
      </div>

    <% elsif bulk_upload.pending? %>
      <!-- Estado: Pendiente -->
      <div class="flex items-center">
        <svg class="h-5 w-5 text-yellow-500 mr-2 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        <span class="text-lg font-semibold text-gray-900">Esperando procesamiento...</span>
      </div>
      <p class="mt-2 text-sm text-gray-600">Tu carga está en cola. El procesamiento comenzará en breve.</p>

      <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mt-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-700">
              La página se actualizará automáticamente cuando comience el procesamiento. También puedes recargar manualmente.
            </p>
          </div>
        </div>
      </div>

      <div class="flex gap-3 mt-6">
        <%= link_to customers_packages_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" do %>
          Ver mis paquetes
        <% end %>

        <%= link_to customers_bulk_upload_path(bulk_upload), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50", data: { turbo: false } do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Actualizar
        <% end %>
      </div>

    <% elsif bulk_upload.completed? %>
      <%= render "customers/bulk_uploads/completed", bulk_upload: bulk_upload %>

    <% elsif bulk_upload.failed? %>
      <%= render "customers/bulk_uploads/completed", bulk_upload: bulk_upload %>
    <% end %>
  </div>
</div>
