<%= turbo_stream_from "bulk_upload_#{@bulk_upload.id}" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center gap-4">
      <%= render 'shared/customer_logo_header' %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Resultado de Carga Masiva</h1>
        <p class="mt-2 text-sm text-gray-600">Revisa el estado y resultados del procesamiento</p>
      </div>
    </div>
  </div>

  <div id="bulk_upload_progress">
    <%= render "customers/bulk_uploads/progress", bulk_upload: @bulk_upload %>
  </div>
</div>
