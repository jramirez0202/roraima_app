<%# Reemplazar cada fila de driver actualizado %>
<% @results[:updated_drivers].each do |driver| %>
  <%= turbo_stream.replace "driver_#{driver.id}" do %>
    <%= render partial: 'driver_row', locals: { driver: driver } %>
  <% end %>
<% end %>

<%# Mostrar mensaje de Ã©xito/error %>
<% if @results[:failed].empty? %>
  <%= turbo_stream.prepend "flash-container" do %>
    <div id="flash-message" class="rounded-md bg-green-50 p-4 mb-4" data-controller="auto-dismiss">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800">
            Rutas iniciadas exitosamente para <%= @results[:success].count %> conductor(es): <%= @results[:success].join(', ') %>
          </p>
        </div>
        <div class="ml-auto pl-3">
          <button type="button" data-action="click->auto-dismiss#dismiss" class="inline-flex rounded-md bg-green-50 p-1.5 text-green-500 hover:bg-green-100">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "flash-container" do %>
    <div id="flash-message" class="rounded-md bg-yellow-50 p-4 mb-4" data-controller="auto-dismiss">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">
            Rutas iniciadas parcialmente
          </h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ul class="list-disc pl-5 space-y-1">
              <li>Exitosas (<%= @results[:success].count %>): <%= @results[:success].join(', ') %></li>
              <li>Con errores (<%= @results[:failed].count %>):
                <ul class="list-disc pl-5 mt-1">
                  <% @results[:failed].each do |failure| %>
                    <li><strong><%= failure[:driver].name %>:</strong> <%= failure[:errors].join(', ') %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
        <div class="ml-auto pl-3">
          <button type="button" data-action="click->auto-dismiss#dismiss" class="inline-flex rounded-md bg-yellow-50 p-1.5 text-yellow-500 hover:bg-yellow-100">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

