<tr id="driver_<%= driver.id %>" class="hover:bg-gray-50">
  <!-- Checkbox - Solo si autorizaciÃ³n estÃ¡ activada -->
  <% if Setting.require_driver_authorization? %>
    <td class="w-12 px-3 py-4">
      <input type="checkbox"
             value="<%= driver.id %>"
             data-action="change->bulk-routes#updateSelection"
             data-bulk-routes-target="checkbox"
             class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
    </td>
  <% end %>

  <!-- Nombre -->
  <td class="whitespace-nowrap px-3 py-4 text-sm font-medium text-gray-900">
    <%= driver.name || "â€”" %>
  </td>

  <!-- Email -->
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-600">
    <%= driver.email %>
  </td>

  <!-- Zona -->
  <td class="px-3 py-4 text-sm">
    <% if driver.assigned_zone %>
      <span class="inline-flex rounded-full px-2 py-1 text-xs font-semibold bg-blue-100 text-blue-800">
        <%= driver.assigned_zone.name %>
      </span>
    <% else %>
      <span class="text-gray-400">Sin asignar</span>
    <% end %>
  </td>

  <!-- Autorizado para Ruta (Toggle) - Solo si estÃ¡ configurado -->
  <% if Setting.require_driver_authorization? %>
    <td class="whitespace-nowrap px-3 py-4 text-center">
      <% if driver.ready_for_route? %>
        <%= link_to toggle_ready_admin_driver_path(driver),
            method: :patch,
            data: { turbo_method: :patch },
            class: "inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-green-100 text-green-800 hover:bg-green-200" do %>
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Autorizado
        <% end %>
      <% else %>
        <%= link_to toggle_ready_admin_driver_path(driver),
            method: :patch,
            data: { turbo_method: :patch },
            class: "inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold bg-gray-100 text-gray-600 hover:bg-gray-200" do %>
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          No autorizado
        <% end %>
      <% end %>
    </td>
  <% end %>

  <!-- Estado Badge -->
  <td class="whitespace-nowrap px-3 py-4 text-sm">
    <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-semibold <%= user_status_badge_classes(driver.active) %>">
      <% if driver.active %>
        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      <% else %>
        <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
      <% end %>
      <%= user_status_text(driver.active) %>
    </span>
  </td>

  <!-- Route Status Badge -->
  <td class="whitespace-nowrap px-3 py-4 text-sm">
    <div class="flex flex-col gap-1">
      <% badge_class = case driver.route_status.to_sym
        when :on_route then "bg-blue-100 text-blue-800"
        when :ready then "bg-yellow-100 text-yellow-800"
        when :completed then "bg-green-100 text-green-800"
        when :not_started then "bg-gray-100 text-gray-800"
        else "bg-gray-100 text-gray-800"
      end %>
      <% icon = case driver.route_status.to_sym
        when :on_route then "ðŸšš"
        when :ready then "â³"
        when :completed then "âœ“"
        else "â€”"
      end %>

      <!-- Badge principal con timestamp si completado -->
      <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-semibold <%= badge_class %>">
        <%= icon %>
        <%= driver.route_status.humanize %>
        <% if driver.completed? && driver.route_ended_at %>
          <span class="ml-1 text-xs opacity-75">
            <%= driver.route_ended_at.strftime("%H:%M") %>
          </span>
        <% end %>
      </span>

      <!-- Indicador de comentario si existe -->
      <% if driver.completed? && driver.current_route&.notes.present? %>
        <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-semibold bg-purple-50 text-purple-700"
              title="<%= driver.current_route.notes %>">
          ðŸ’¬ Con nota
        </span>
      <% end %>

      <% if driver.ready_for_route? %>
        <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-semibold bg-green-50 text-green-700">
          âœ“ Autorizado
        </span>
      <% end %>
    </div>
  </td>

  <!-- Actions -->
  <td class="whitespace-nowrap px-3 py-4 text-sm text-center">
    <div class="flex items-center justify-center gap-2">
      <%= link_to admin_driver_path(driver), class: "text-indigo-600 hover:text-indigo-900", title: "Ver detalles" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
      <%= link_to edit_admin_driver_path(driver), class: "text-gray-600 hover:text-gray-900", title: "Editar" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      <% unless driver.id == current_user.id %>
        <%= button_to admin_driver_path(driver), method: :delete, data: { confirm: "Â¿EstÃ¡s seguro de eliminar este conductor?" }, class: "text-red-600 hover:text-red-900", title: "Eliminar" do %>
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
