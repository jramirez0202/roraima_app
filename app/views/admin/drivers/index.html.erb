<div class="px-4 sm:px-6 lg:px-8" data-controller="bulk-routes">
  <!-- Flash Messages Container -->
  <div id="flash-container"></div>

  <div class="sm:flex sm:items-center sm:justify-between">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Conductores</h1>
      <p class="mt-2 text-sm text-gray-700">
        Total: <span class="font-semibold text-green-600"><%= @pagy.count %></span> conductores
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 flex gap-3">
      <% if Setting.require_driver_authorization? %>
        <%= button_tag type: "button",
            data: { action: "click->bulk-routes#startRoutes" },
            class: "inline-flex items-center justify-center gap-2 rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed",
            id: "bulk-start-btn",
            disabled: true do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span data-bulk-routes-target="buttonText">Iniciar Ruta</span>
        <% end %>
      <% end %>
      <%= link_to new_admin_driver_path, class: "inline-flex items-center justify-center gap-2 rounded-md bg-green-600 px-4 py-2 text-sm font-medium text-white hover:bg-green-700" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nuevo Conductor
      <% end %>
    </div>
  </div>

  <!-- Filtros -->
  <div class="mt-6 bg-white shadow rounded-lg p-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <!-- Filtro por Zona -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Zona Asignada</label>
        <div class="flex flex-wrap gap-2">
          <%= link_to "Todas", admin_drivers_path(status: params[:status]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:zone_id].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <% @zones.each do |zone| %>
            <%= link_to zone.name, admin_drivers_path(zone_id: zone.id, status: params[:status]),
                data: { turbo_prefetch: false },
                class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:zone_id].to_i == zone.id ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <% end %>
        </div>
      </div>

      <!-- Filtro por Estado -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
        <div class="flex flex-wrap gap-2">
          <%= link_to "Todos", admin_drivers_path(zone_id: params[:zone_id]),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Activos", admin_drivers_path(zone_id: params[:zone_id], status: 'active'),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:status] == 'active' ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
          <%= link_to "Inactivos", admin_drivers_path(zone_id: params[:zone_id], status: 'inactive'),
              data: { turbo_prefetch: false },
              class: "inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium #{params[:status] == 'inactive' ? 'bg-red-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabla de conductores -->
  <div class="mt-6 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300 bg-white">
            <thead class="bg-gray-50">
              <tr>
                <% if Setting.require_driver_authorization? %>
                  <th class="w-12 px-3 py-3.5">
                    <input type="checkbox"
                           data-action="change->bulk-routes#toggleAll"
                           data-bulk-routes-target="selectAll"
                           class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                  </th>
                <% end %>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Nombre</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Email</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Zona</th>
                <% if Setting.require_driver_authorization? %>
                  <th class="px-3 py-3.5 text-center text-xs font-semibold text-gray-900 uppercase tracking-wider">Autorizado</th>
                <% end %>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Estado</th>
                <th class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 uppercase tracking-wider">Estado Ruta</th>
                <th class="px-3 py-3.5 text-center text-xs font-semibold text-gray-900 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200" id="drivers-table-body">
              <%= render partial: 'driver_row', collection: @drivers, as: :driver %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- PaginaciÃ³n con Pagy -->
  <div class="mt-6 border-t border-gray-200 bg-white px-4 py-3 sm:px-6 rounded-lg shadow">
    <div class="flex items-center justify-between">
      <div class="flex-1 flex justify-between sm:hidden">
        <% if @pagy.prev %>
          <%= link_to "Anterior", admin_drivers_path(page: @pagy.prev, zone_id: params[:zone_id], status: params[:status]),
              data: { turbo_prefetch: false },
              class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% else %>
          <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-gray-100 px-4 py-2 text-sm font-medium text-gray-400">Anterior</span>
        <% end %>

        <% if @pagy.next %>
          <%= link_to "Siguiente", admin_drivers_path(page: @pagy.next, zone_id: params[:zone_id], status: params[:status]),
              data: { turbo_prefetch: false },
              class: "relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% else %>
          <span class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-gray-100 px-4 py-2 text-sm font-medium text-gray-400">Siguiente</span>
        <% end %>
      </div>

      <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Mostrando
            <span class="font-medium"><%= @pagy.from %></span>
            a
            <span class="font-medium"><%= @pagy.to %></span>
            de
            <span class="font-medium"><%= @pagy.count %></span>
            resultados
          </p>
        </div>
        <div>
          <%== pagy_nav(@pagy, pagy_id: 'pagy-nav', link_extra: 'class="relative inline-flex items-center border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"') %>
        </div>
      </div>
    </div>
  </div>
</div>
