<div class="px-4 sm:px-6 lg:px-8 py-8">
  <div class="lg:grid lg:grid-cols-3 lg:gap-6">
    <!-- Columna Principal (2/3) -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Header -->
      <div class="bg-white shadow rounded-lg p-6">
        <div class="sm:flex sm:items-center sm:justify-between">
          <div class="flex-1">
            <h2 class="text-2xl font-bold text-gray-900"><%= @driver.email %></h2>
            <div class="mt-2 flex flex-wrap gap-2">
              <span class="inline-flex rounded-full px-3 py-1 text-sm font-semibold <%= role_badge_classes(@driver.role) %>">
                <%= role_text(@driver.role) %>
              </span>
              <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold <%= user_status_badge_classes(@driver.active) %>">
                <% if @driver.active %>
                  <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                <% else %>
                  <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                <% end %>
                <%= user_status_text(@driver.active) %>
              </span>
            </div>
          </div>
          <div class="mt-4 sm:mt-0 sm:ml-16 flex gap-2">
            <%= link_to edit_admin_driver_path(@driver), class: "inline-flex items-center justify-center rounded-md bg-green-600 px-4 py-2 text-sm font-medium text-white hover:bg-green-700" do %>
              Editar
            <% end %>
            <% unless @driver.id == current_user.id %>
              <%= button_to admin_driver_path(@driver), method: :delete, data: { confirm: "¿Estás seguro de eliminar este conductor?" }, class: "inline-flex items-center justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-medium text-white hover:bg-red-700" do %>
                Eliminar
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Estadísticas de Entregas -->
      <div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
        <!-- Entregas Hoy -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Entregas Hoy</dt>
                  <dd class="text-3xl font-semibold text-gray-900"><%= @today_deliveries_count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <!-- Pendientes -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Pendientes</dt>
                  <dd class="text-3xl font-semibold text-gray-900"><%= @pending_deliveries_count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <!-- Total Asignados -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Asignados</dt>
                  <dd class="text-3xl font-semibold text-gray-900"><%= @total_deliveries_count %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Información Básica -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Información Básica</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @driver.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">RUT</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= format_rut(@driver.rut) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @driver.phone || "—" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Estado</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= user_status_text(@driver.active) %></dd>
          </div>
        </dl>
      </div>

      <!-- Información del Vehículo -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Información del Vehículo</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Patente</dt>
            <dd class="mt-1 text-lg font-bold text-gray-900 font-mono uppercase"><%= format_vehicle_plate(@driver.vehicle_plate) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Modelo</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @driver.vehicle_model || "—" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Capacidad</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @driver.vehicle_capacity ? "#{@driver.vehicle_capacity} paquetes" : "—" %></dd>
          </div>
        </dl>
      </div>

      <!-- Zona Asignada -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Zona Asignada</h3>
        <% if @driver.assigned_zone %>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">Zona</dt>
              <dd class="mt-1">
                <span class="inline-flex rounded-full px-3 py-1 text-sm font-semibold bg-blue-100 text-blue-800">
                  <%= @driver.assigned_zone.name %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Región</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @driver.assigned_zone.region&.name || "—" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Comunas</dt>
              <dd class="mt-2 flex flex-wrap gap-2">
                <% @driver.assigned_zone.commune_names.each do |commune_name| %>
                  <span class="inline-flex rounded-md px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700">
                    <%= commune_name %>
                  </span>
                <% end %>
              </dd>
            </div>
          </dl>
        <% else %>
          <div class="text-center py-6">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <p class="mt-2 text-sm text-gray-500">Sin zona asignada</p>
            <%= link_to edit_admin_driver_path(@driver), class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200" do %>
              Asignar Zona
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Historial de Rutas (Últimas 3) -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Historial de Rutas (Últimas 3)</h3>

        <% if @last_routes.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Inicia
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Finaliza
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Paquetes Entregados
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Estado
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @last_routes.each do |route| %>
                  <tr class="<%= 'bg-blue-50' if route.active? %>">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= format_route_datetime(route.started_at) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <% if route.ended_at %>
                        <%= format_route_datetime(route.ended_at) %>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          En curso
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center font-semibold">
                      <%= route.packages_delivered %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= route_status_badge_classes(route.status) %>">
                        <%= route.status_i18n %>
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <!-- Empty state -->
          <div class="text-center py-12 border-2 border-dashed border-gray-300 rounded-lg">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <p class="mt-2 text-sm text-gray-500">Este conductor aún no ha completado ninguna ruta</p>
            <p class="mt-1 text-xs text-gray-400">El historial aparecerá aquí una vez que inicie su primera ruta</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar (1/3) -->
    <div class="mt-6 lg:mt-0 lg:col-span-1">
      <div class="bg-white shadow rounded-lg p-6 lg:sticky lg:top-4">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Últimos Paquetes Asignados</h3>
        <% if @driver.visible_packages.any? %>
          <ul class="divide-y divide-gray-200">
            <% @driver.visible_packages.order(created_at: :desc).limit(5).each do |package| %>
              <li class="py-3">
                <%= link_to admin_package_path(package), class: "block hover:bg-gray-50 -mx-3 px-3 py-2 rounded-md" do %>
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-indigo-600 truncate">
                      #<%= package.tracking_code %>
                    </p>
                    <span class="ml-2 flex-shrink-0 inline-flex px-2 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      <%= Package.human_attribute_name("status.#{package.status}") %>
                    </span>
                  </div>
                  <p class="mt-1 text-sm text-gray-500 truncate">
                    <%= package.commune&.name %>
                  </p>
                <% end %>
              </li>
            <% end %>
          </ul>
          <div class="mt-4">
            <%= link_to admin_packages_path(courier_id: @driver.id), class: "text-sm font-medium text-green-600 hover:text-green-500" do %>
              Ver todos →
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
            </svg>
            <p class="mt-2 text-sm text-gray-500">Sin paquetes asignados</p>
          </div>
        <% end %>
      </div>

      <!-- Botón volver -->
      <div class="mt-4">
        <%= link_to admin_drivers_path, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          ← Volver a la lista
        <% end %>
      </div>
    </div>
  </div>
</div>
