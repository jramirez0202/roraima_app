<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Zonas de Reparto</h1>
    <%= link_to "Nueva Zona", new_admin_zone_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Filtros -->
  <div class="bg-white shadow-md rounded-lg p-4 mb-6">
    <%= form_with url: admin_zones_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :region_id, "Región", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :region_id,
                     options_from_collection_for_select(@regions, :id, :name, params[:region_id]),
                     { include_blank: "Todas las regiones" },
                     class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3" %>
      </div>

      <div class="flex-1 min-w-[200px]">
        <%= f.label :status, "Estado", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status,
                     [["Todas", ""], ["Activas", "active"], ["Inactivas", "inactive"]],
                     {},
                     class: "w-full border border-gray-300 rounded-md shadow-sm py-2 px-3" %>
      </div>

      <div class="flex items-end gap-2">
        <%= f.submit "Filtrar", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Limpiar", admin_zones_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <!-- Tabla de Zonas -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Nombre
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Región
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Comunas
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Drivers
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Estado
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Acciones
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @zones.any? %>
          <% @zones.each do |zone| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= zone.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= zone.region&.name || "Sin región" %>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">
                  <%= zone.communes.present? ? "#{zone.communes.count} comunas" : "Sin comunas" %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= zone.drivers.count %> drivers
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if zone.active? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Activa
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                    Inactiva
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Ver", admin_zone_path(zone), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to "Editar", edit_admin_zone_path(zone), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= link_to "Eliminar", admin_zone_path(zone),
                            method: :delete,
                            data: { confirm: "¿Estás seguro? Los drivers de esta zona quedarán sin zona asignada." },
                            class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-4 text-center text-gray-500">
              No se encontraron zonas. <%= link_to "Crear primera zona", new_admin_zone_path, class: "text-blue-600 hover:text-blue-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Paginación -->
  <div class="mt-6">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
