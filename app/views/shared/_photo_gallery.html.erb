<%#
  Photo Gallery Partial - Reusable photo grid component

  Parameters:
  - photos: ActiveStorage attachments collection
  - modal_function: JavaScript function name to open modal (e.g., 'openProofPhotoModal')
  - alt_text: Alt text for images (e.g., 'Foto de evidencia de entrega')
%>

<div class="grid grid-cols-2 gap-2">
  <% photos.each do |photo| %>
  <div class="relative group">
    <%= image_tag photo, class: "w-full h-32 object-cover rounded-lg
    border border-gray-300 cursor-pointer hover:opacity-90
    transition-opacity", onclick:
    "#{modal_function}('#{url_for(photo)}')", alt: alt_text %>
    <button
      type="button"
      onclick="<%= modal_function %>('<%= url_for(photo) %>')"
      class="absolute top-1 right-1 bg-white bg-opacity-90 hover:bg-opacity-100 rounded-full p-1 shadow-lg transition-all opacity-0 group-hover:opacity-100"
    >
      <svg
        class="w-4 h-4 text-gray-700"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
        />
      </svg>
    </button>
  </div>
  <% end %>
</div>
