<%
  # Determinar colores seg칰n el rol - Paleta m치s refinada
  if current_user.driver?
    bg_color = "bg-blue-950"
    text_color = "text-blue-100"
    text_muted = "text-blue-300"
    hover_color = "hover:bg-blue-900/50"
    active_color = "bg-blue-800/60"
    logo_emoji = "游뚴"
    logo_text = "RutiService"
    logo_subtitle = "Panel de Conductor"
    badge_bg = "bg-blue-800/50"
    badge_text = "text-blue-200"
    border_color = "border-blue-800/30"
    accent_color = "text-blue-400"
  elsif current_user.admin?
    bg_color = "bg-blue-950"
    text_color = "text-blue-100"
    text_muted = "text-blue-300"
    hover_color = "hover:bg-blue-900/50"
    active_color = "bg-blue-800/60"
    logo_emoji = "游닍"
    logo_text = "RutiService"
    logo_subtitle = "Administraci칩n"
    badge_bg = "bg-blue-800/50"
    badge_text = "text-blue-200"
    border_color = "border-blue-800/30"
    accent_color = "text-blue-400"
  else
    # Customer - Azul #247ba0
    bg_color = "bg-[#247ba0]"
    text_color = "text-white"
    text_muted = "text-sky-200"
    hover_color = "hover:bg-[#1d6584]"
    active_color = "bg-[#1d6584]"
    logo_emoji = "游닍"
    logo_text = "RutiService"
    logo_subtitle = "Mi Portal"
    badge_bg = "bg-white/20"
    badge_text = "text-sky-100"
    border_color = "border-sky-400/30"
    accent_color = "text-sky-200"
  end
%>

<!-- Sidebar - Fixed, siempre visible en desktop (md+), oculto en mobile -->
<aside class="
  hidden md:flex md:flex-col
  fixed inset-y-0 left-0
  w-64
  <%= bg_color %>
  z-10
">
  <!-- Logo / Brand -->
  <div class="flex items-center gap-3 px-6 py-6">
    <span class="text-3xl"><%= logo_emoji %></span>
    <div>
      <h1 class="text-lg font-bold <%= text_color %> tracking-tight"><%= logo_text %></h1>
      <p class="text-xs <%= text_muted %>"><%= logo_subtitle %></p>
    </div>
  </div>

  <!-- User Info -->
  <div class="px-6 pb-6">
    <div class="flex items-center gap-3 p-3 rounded-xl <%= badge_bg %> backdrop-blur-sm">
      <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
        <span class="text-lg"><%= current_user.driver? ? "游녻" : "游녻" %></span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium <%= text_color %> truncate">
          <%= current_user.driver? ? current_user.name : current_user.email.split('@').first %>
        </p>
        <p class="text-xs <%= text_muted %> truncate">
          <% if current_user.driver? && current_user.assigned_zone %>
            Zona: <%= current_user.assigned_zone.name %>
          <% else %>
            <%= current_user.role.titleize %>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 space-y-1 overflow-y-auto">
    <% if current_user.admin? %>
      <!-- Admin Navigation -->
      <%= link_to admin_packages_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{request.path.start_with?('/admin/packages') || request.path.start_with?('/admin/bulk_uploads') ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        Paquetes
      <% end %>

      <%= link_to admin_scanner_warehouse_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(admin_scanner_warehouse_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
        </svg>
        Esc치ner Bodega
      <% end %>

      <%= link_to admin_users_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(admin_users_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
        Usuarios
      <% end %>

      <%= link_to admin_drivers_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(admin_drivers_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
        </svg>
        Conductores
      <% end %>

      <% if Route.old_active_routes.any? %>
        <%= link_to admin_old_active_routes_path,
          class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(admin_old_active_routes_path) ? active_color : hover_color}" do %>
          <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="flex-1">Rutas Antiguas</span>
          <span class="inline-flex items-center justify-center w-5 h-5 text-xs font-bold text-amber-900 bg-amber-400 rounded-full">
            <%= Route.old_active_routes.count %>
          </span>
        <% end %>
      <% end %>

      <%= link_to admin_settings_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(admin_settings_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Configuraci칩n
      <% end %>

    <% elsif current_user.driver? %>
      <!-- Driver Navigation -->
      <%= link_to drivers_root_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(drivers_root_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        Dashboard
      <% end %>

      <%= link_to drivers_packages_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{request.path.start_with?('/drivers/packages') ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        Mis Paquetes
      <% end %>

      <%= link_to drivers_scanner_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(drivers_scanner_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
        </svg>
        Escanear
      <% end %>

      <%= link_to drivers_profile_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(drivers_profile_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        Mi Perfil
      <% end %>

    <% else %>
      <!-- Customer Navigation -->
      <%= link_to customers_dashboard_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(customers_dashboard_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        Dashboard
      <% end %>

      <%= link_to customers_packages_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{request.path.start_with?('/customers/packages') || request.path.start_with?('/customers/bulk_uploads') ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        Mis Paquetes
      <% end %>

      <%= link_to customers_profile_path,
        class: "flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200 #{text_color} #{current_page?(customers_profile_path) ? active_color : hover_color}" do %>
        <svg class="w-5 h-5 <%= accent_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        Mi Perfil
      <% end %>
    <% end %>
  </nav>

  <!-- Footer / Logout -->
  <div class="p-4 mt-auto">
    <%= button_to destroy_user_session_path,
      method: :delete,
      data: { turbo: false },
      class: "flex items-center gap-3 w-full px-4 py-3 rounded-xl text-sm font-medium #{text_muted} #{hover_color} transition-all duration-200" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
      </svg>
      Cerrar Sesi칩n
    <% end %>
  </div>
</aside>
