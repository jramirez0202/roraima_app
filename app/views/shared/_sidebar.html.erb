<%
  # Determinar colores seg칰n el rol
  if current_user.driver?
    bg_color = "bg-blue-900"
    text_color = "text-white"
    hover_color = "hover:bg-blue-800"
    active_color = "bg-blue-800"
    logo_emoji = "游뚴"
    logo_text = "RutiService Driver"
    badge_color = "bg-blue-700 text-blue-100"
    logout_color = "text-blue-200 hover:text-white"
    border_color = "border-blue-800"
    button_bg = "bg-blue-900"
    button_text = "text-white"
  elsif current_user.admin?
    bg_color = "bg-[var(--color-admin-bg)]"
    text_color = "text-[var(--color-admin-text)]"
    hover_color = "hover:bg-[var(--color-admin-bg-hover)]"
    active_color = "bg-[var(--color-admin-bg-active)]"
    logo_emoji = "游닍"
    logo_text = "Paqueter칤a Admin"
    badge_color = "bg-purple-100 text-purple-800"
    logout_color = "text-white hover:text-gray-200"
    border_color = "border-[var(--color-admin-border)]"
    button_bg = "bg-[var(--color-admin-bg)]"
    button_text = "text-[var(--color-admin-text)]"
  else
    # Customer - Azul gris치ceo (Slate) para transmitir confianza y profesionalismo
    bg_color = "bg-slate-800"
    text_color = "text-slate-100"
    hover_color = "hover:bg-slate-700"
    active_color = "bg-slate-600"
    logo_emoji = "游닍"
    logo_text = "Paqueter칤a"
    badge_color = "bg-slate-700 text-slate-100"
    logout_color = "text-slate-200 hover:text-white"
    border_color = "border-slate-700"
    button_bg = "bg-slate-800"
    button_text = "text-slate-100"
  end
%>

<!-- Sidebar - Solo visible en desktop (>= md) -->
<div data-controller="sidebar" class="hidden md:block">
  <!-- Bot칩n hamburguesa fijo en la esquina superior izquierda -->
  <button
    data-action="click->sidebar#toggle"
    type="button"
    class="fixed top-4 left-4 z-[60] inline-flex items-center p-2.5 rounded-lg bg-white text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 shadow-lg border border-gray-200">
    <span class="sr-only">Abrir men칰</span>
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>

  <!-- Overlay oscuro - Solo en mobile -->
  <div
    data-sidebar-target="overlay"
    data-action="click->sidebar#close"
    class="hidden md:!hidden fixed inset-0 bg-black bg-opacity-50 z-40 transition-opacity">
  </div>

  <!-- Sidebar -->
  <aside
    data-sidebar-target="sidebar"
    class="fixed top-0 left-0 z-50 h-full w-80 <%= bg_color %> border-r <%= border_color %> shadow-xl transform transition-transform duration-300 ease-in-out flex flex-col">

    <!-- Header del Sidebar -->
    <div class="flex items-center justify-between p-6 border-b <%= border_color %>">
      <div class="flex items-center space-x-3">
        <span class="text-3xl"><%= logo_emoji %></span>
        <div>
          <h2 class="text-lg font-bold <%= text_color %>"><%= logo_text %></h2>
          <p class="text-xs <%= text_color %> opacity-75"><%= current_user.driver? ? current_user.name : current_user.email %></p>
        </div>
      </div>

      <!-- Bot칩n cerrar -->
      <button
        data-action="click->sidebar#close"
        type="button"
        class="<%= text_color %> <%= hover_color %> rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors">
        <span class="sr-only">Cerrar men칰</span>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- User Info Badge -->
    <div class="px-6 py-4 border-b <%= border_color %>">
      <div class="flex items-center justify-between">
        <span class="px-3 py-1 text-sm font-medium rounded-full <%= badge_color %>">
          <%= current_user.role.titleize %>
        </span>
        <% if current_user.driver? && current_user.assigned_zone %>
          <span class="text-xs <%= text_color %> opacity-75">
            Zona: <%= current_user.assigned_zone.name %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Navigation Links -->
    <nav class="flex-1 overflow-y-auto p-4 space-y-2">
      <% if current_user.admin? %>
        <!-- Admin Links -->

        <!-- Paquetes - Men칰 desplegable -->
        <div data-controller="sidebar-menu"
             data-action="mouseenter->sidebar-menu#mouseEnter mouseleave->sidebar-menu#mouseLeave">
          <div class="flex items-center justify-between w-full px-4 py-3 rounded-lg <%= text_color %> <%= hover_color %> <%= request.path.start_with?('/admin/packages') || request.path == new_admin_package_path || request.path.start_with?('/admin/bulk_uploads') ? active_color : '' %>">
            <%= link_to admin_packages_path,
              class: "flex items-center flex-1" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
              </svg>
              <span class="font-medium">Paquetes</span>
            <% end %>
            <button
              type="button"
              data-action="click->sidebar-menu#toggle"
              class="p-1 <%= hover_color %> rounded">
              <svg data-sidebar-menu-target="arrow" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>

          <!-- Submen칰 de Paquetes -->
          <div data-sidebar-menu-target="submenu" class="hidden ml-8 mt-1 space-y-1">
            <%= link_to new_admin_package_path,
              class: "flex items-center px-4 py-2 rounded-lg text-sm #{text_color} #{hover_color} #{current_page?(new_admin_package_path) ? active_color : ''}" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Carga Manual
            <% end %>

            <%= link_to new_admin_bulk_upload_path,
              class: "flex items-center px-4 py-2 rounded-lg text-sm #{text_color} #{hover_color} #{request.path.start_with?('/admin/bulk_uploads') ? active_color : ''}" do %>
