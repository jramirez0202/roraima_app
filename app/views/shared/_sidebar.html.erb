                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              Carga Masiva
            <% end %>
          </div>
        </div>

        <%= link_to admin_scanner_warehouse_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(admin_scanner_warehouse_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
          </svg>
          <span class="font-medium">Esc치ner Bodega</span>
        <% end %>

        <%= link_to admin_users_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(admin_users_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          <span class="font-medium">Usuarios</span>
        <% end %>

        <%= link_to admin_old_active_routes_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(admin_old_active_routes_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium">Rutas Antiguas</span>
          <% if Route.old_active_routes.any? %>
            <span class="ml-auto inline-flex items-center rounded-full bg-red-100 px-2 py-1 text-xs font-medium text-red-700">
              <%= Route.old_active_routes.count %>
            </span>
          <% end %>
        <% end %>

        <%= link_to admin_settings_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(admin_settings_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span class="font-medium">Configuraci칩n</span>
        <% end %>

      <% elsif current_user.driver? %>
        <!-- Driver Links -->
        <%= link_to drivers_root_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(drivers_root_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span class="font-medium">Dashboard</span>
        <% end %>

        <%= link_to drivers_packages_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{request.path.start_with?('/drivers/packages') ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <span class="font-medium">Mis Paquetes</span>
        <% end %>

        <%= link_to drivers_scanner_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(drivers_scanner_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
          </svg>
          <span class="font-medium">Escanear Paquetes</span>
        <% end %>

        <%= link_to drivers_profile_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(drivers_profile_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="font-medium">Mi Perfil</span>
        <% end %>

      <% else %>
        <!-- Customer Links -->
        <%= link_to customers_dashboard_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(customers_dashboard_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span class="font-medium">Dashboard</span>
        <% end %>

        <!-- Paquetes - Men칰 desplegable -->
        <div data-controller="sidebar-menu"
             data-action="mouseenter->sidebar-menu#mouseEnter mouseleave->sidebar-menu#mouseLeave">
          <div class="flex items-center justify-between w-full px-4 py-3 rounded-lg <%= text_color %> <%= hover_color %> <%= request.path.start_with?('/customers/packages') || request.path == new_customers_package_path || request.path.start_with?('/customers/bulk_uploads') ? active_color : '' %>">
            <%= link_to customers_packages_path,
              class: "flex items-center flex-1" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
              </svg>
              <span class="font-medium">Mis Paquetes</span>
            <% end %>
            <button
              type="button"
              data-action="click->sidebar-menu#toggle"
              class="p-1 <%= hover_color %> rounded">
              <svg data-sidebar-menu-target="arrow" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>

          <!-- Submen칰 de Paquetes -->
          <div data-sidebar-menu-target="submenu" class="hidden ml-8 mt-1 space-y-1">
            <%= link_to new_customers_package_path,
              class: "flex items-center px-4 py-2 rounded-lg text-sm #{text_color} #{hover_color} #{current_page?(new_customers_package_path) ? active_color : ''}" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Carga Manual
            <% end %>

            <%= link_to new_customers_bulk_upload_path,
              class: "flex items-center px-4 py-2 rounded-lg text-sm #{text_color} #{hover_color} #{request.path.start_with?('/customers/bulk_uploads') ? active_color : ''}" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              Carga Masiva
            <% end %>
          </div>
        </div>

        <%= link_to customers_profile_path,
          class: "flex items-center px-4 py-3 rounded-lg #{text_color} #{hover_color} #{current_page?(customers_profile_path) ? active_color : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="font-medium">Mi Perfil</span>
        <% end %>
      <% end %>
    </nav>

    <!-- Footer del Sidebar -->
    <div class="p-6 border-t <%= border_color %> mt-auto">
      <%= button_to destroy_user_session_path,
        method: :delete,
        data: { turbo: false },
        class: "flex items-center w-full px-4 py-3 rounded-lg #{logout_color} #{hover_color} transition-colors" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        <span class="font-medium">Cerrar Sesi칩n</span>
      <% end %>
    </div>
  </aside>
</div>
