<div class="px-4 sm:px-0">
  <!-- Navegación: Volver a Mis Paquetes -->
  <div class="mb-6">
    <%= link_to(drivers_packages_path(@filter_params), class: "text-blue-600 hover:text-blue-800 inline-flex items-center") do %>
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Volver a Mis Paquetes
    <% end %>
  </div>

  <!-- Contenedor Principal -->
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">

    <!-- Header: Tracking Code y Status Badge -->
    <% cache [@package, 'header-v2'] do %>
      <%= render 'header', package: @package %>
    <% end %>

    <!-- Sección: Información de Entrega (Destinatario, Teléfono, Dirección, Waze) -->
    <% cache [@package, 'delivery-info-v2'] do %>
      <%= render 'delivery_info', package: @package %>
    <% end %>

    <!-- Sección: Detalles del Paquete (Fecha, Monto, Método de Pago, Descripción) -->
    <%= render 'package_details', package: @package %>

    <!-- Sección: Detalles del Receptor (solo si delivered) -->
    <%= render 'receiver_details', package: @package %>

    <!-- Sección: Fotos de Evidencia de Entrega (solo si delivered) -->
    <%= render 'proof_photos', package: @package %>

    <!-- Sección: Información de Reprogramación (solo si rescheduled) -->
    <%= render 'reschedule_info', package: @package %>

    <!-- Sección: Formulario de Cambio de Estado (solo si no delivered) -->
    <% unless @package.delivered? %>
    <div class="px-6 py-4 bg-gray-50">
      <h2 class="text-lg font-semibold text-gray-900 mb-3">Cambiar Estado</h2>

      <%= form_with url: change_status_drivers_package_path(@package),
                    method: :patch,
                    local: true,
                    id: "package-status-form",
                    class: "space-y-4" do |f| %>

        <!-- Campo hidden para payment_method sincronizado -->
        <% if @package.amount > 0 %>
          <%= f.hidden_field :payment_method, value: @package.payment_method, id: "form_payment_method" %>
        <% end %>

        <!-- Selector de Estado -->
        <%= render 'status_form_fields', form: f, package: @package %>

        <!-- Grid responsive: Motivo/Receptor + Método de Pago -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-6">
          <!-- Columna 1: Motivo (para reprogramado/return/cancelled) o Receptor (para delivered) -->
          <div>
            <!-- Campo de Motivo (condicional para reprogramado, return, cancelled) -->
            <div id="reason-field" style="display: none">
              <%= f.label :reason, class: "block text-sm font-medium text-gray-700 mb-1" do %>
                Motivo <span class="text-red-500">*</span>
              <% end %>
              <%= f.text_area :reason, rows: 3, maxlength: 30,
                                 class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                                 placeholder: "Ej: Cliente no disponible...",
                                 required: true,
                                 oninput: "updateDriverReasonCounter()" %>
              <p class="mt-1 text-xs text-gray-500">
                <span id="driver-reason-counter">0</span>/30 caracteres
              </p>
            </div>

            <!-- Datos del Receptor (condicional para delivered) -->
            <%= render 'receiver_form_fields', form: f, package: @package %>
          </div>

          <!-- Columna 2: Monto y Método de Pago -->
          <% if @package.amount > 0 %>
          <div class="space-y-4">
            <!-- Monto (sin cuadro) -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Monto a Cobrar
              </label>
              <div class="text-lg font-semibold text-gray-900">
                <%= @package.formatted_amount %>
              </div>
            </div>

            <!-- Método de Pago -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Método de Pago <span class="text-red-500">*</span>
              </label>
              <div class="space-y-2">
                <% payment_method_options.each do |option| %>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="radio"
                         name="display_payment_method"
                         value="<%= option[:value] %>"
                         <%= 'checked' if @package.payment_method == option[:value] %>
                         class="w-4 h-4 text-blue-600 focus:ring-blue-500 border-gray-300 payment-method-radio">
                  <span class="text-sm font-medium text-gray-900">
                    <%= option[:label] %>
                  </span>
                </label>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>

        <!-- Fotos de Evidencia para Entregado -->
        <%= render 'delivery_photos_field', package: @package %>

        <!-- Fotos de Evidencia para Reprogramado -->
        <%= render 'reschedule_photos_field', package: @package %>

        <!-- Fotos de Evidencia para Cancelado -->
        <%= render 'cancelled_photos_field', package: @package %>

        <!-- Botones de Acción -->
        <div class="flex gap-3">
          <%= f.submit "Actualizar Estado",
                       id: "update-status-btn",
                       class: "flex-1 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <%= link_to "Cancelar",
                      drivers_packages_path(@filter_params),
                      class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
        </div>
      <% end %>
    </div>
    <% end %>

  </div>
</div>

<!-- Modales y Scripts (solo si hay fotos) -->
<%= render 'modals_and_scripts', package: @package %>

<!-- Script para sincronizar método de pago -->
<% if @package.amount > 0 && !@package.delivered? %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const paymentRadios = document.querySelectorAll('.payment-method-radio');
    const hiddenField = document.getElementById('form_payment_method');

    if (paymentRadios.length > 0 && hiddenField) {
      paymentRadios.forEach(radio => {
        radio.addEventListener('change', function() {
          hiddenField.value = this.value;
        });
      });
    }
  });
</script>
<% end %>
