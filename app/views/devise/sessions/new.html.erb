<!-- Vista de Login Moderna - Roraima Delivery -->
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-violet-50 via-purple-50 to-fuchsia-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Card principal -->
    <div class="bg-white shadow-2xl rounded-2xl p-8 space-y-6">

      <!-- Logo y título -->
      <div class="text-center">
        <div class="flex justify-center mb-4">
          <%= image_tag 'logo.png', alt: 'Roraima Delivery', class: 'h-16 w-auto' %>
        </div>
        <h2 class="text-3xl font-bold text-gray-900">
          Roraima Delivery
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Inicia sesión en tu cuenta
        </p>
      </div>

      <!-- Mensajes de error globales -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Formulario -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>

        <!-- Campo de Email -->
        <div>
          <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <!-- Icono de email -->
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "exmaple@email.com",
                class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
        </div>

        <!-- Campo de Contraseña -->
        <div>
          <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <!-- Icono de candado -->
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :password,
                autocomplete: "current-password",
                placeholder: "••••••••",
                class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
        </div>

        <!-- Recordarme -->
        <div class="flex items-center">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me,
                  class: "h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded cursor-pointer" %>
              <%= f.label :remember_me, "Recordarme", class: "ml-2 block text-sm text-gray-700 cursor-pointer" %>
            </div>
          <% end %>
        </div>

        <!-- PASSWORD RECOVERY DISABLED - Only admins can create/manage users -->

        <!-- Botón de Submit -->
        <div>
          <%= f.submit "Iniciar Sesión",
              class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition duration-150 ease-in-out shadow-lg hover:shadow-xl" %>
        </div>

      <% end %>

      <!-- Enlaces adicionales -->
      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>

    </div>

    <!-- Footer -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-600">
        © <%= Time.current.year %> Roraima Delivery. Todos los derechos reservados.
      </p>
    </div>
  </div>
</div>
