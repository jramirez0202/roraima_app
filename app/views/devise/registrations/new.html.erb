<!-- Vista de Registro Moderna - Roraima Delivery -->
<div class="min-h-[75vh] flex items-center justify-center bg-gradient-to-br from-violet-50 via-purple-50 to-fuchsia-50 py-6 px-4 sm:px-4 lg:px-6">
  <div class="max-w-md w-full">
    <!-- Card principal -->
    <div class="bg-white shadow-2xl rounded-2xl p-8 space-y-6">

      <!-- Logo y título -->
      <div class="text-center">
        <div class="flex justify-center mb-4">
          <%= image_tag 'logo.png', alt: 'Roraima Delivery', class: 'h-16 w-auto' %>
        </div>
        <h2 class="text-3xl font-bold text-gray-900">
          Roraima Delivery
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Crea tu cuenta nueva
        </p>
      </div>

      <!-- Mensajes de error globales -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Formulario -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>

        <!-- Campo de Email -->
        <div>
          <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <!-- Icono de email -->
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "example@email.com",
                class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
        </div>

        <!-- Campo de Contraseña -->
        <div>
          <div class="flex justify-between items-center mb-2">
            <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500">
                (mínimo <%= @minimum_password_length %> caracteres)
              </span>
            <% end %>
          </div>
          <div class="relative">
            <!-- Icono de candado -->
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= f.password_field :password,
                autocomplete: "new-password",
                placeholder: "••••••••",
                class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
        </div>

        <!-- Campo de Confirmación de Contraseña -->
        <div>
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <!-- Icono de candado con check -->
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                placeholder: "••••••••",
                class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
        </div>

        <!-- Botón de Submit -->
        <div>
          <%= f.submit "Crear Cuenta",
                class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
        </div>

      <% end %>

      <!-- Enlaces adicionales -->
      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>

    </div>

    <!-- Footer -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-600">
        © <%= Time.current.year %> Roraima Delivery. Todos los derechos reservados.
      </p>
    </div>
  </div>
</div>
