<!DOCTYPE html>
<html>
  <head>
    <title>RutiService - Panel de Conductor</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <div data-controller="sidebar" class="min-h-screen">
      <%= render "shared/sidebar" %>
      <%= render "shared/mobile_bottom_nav" %>

      <!-- Wrapper que recibe el margin cuando sidebar estÃ¡ abierto -->
      <div data-sidebar-target="main" class="transition-all duration-300 ease-in-out md:ml-80">
        <main class="max-w-7xl mx-auto pt-6 pb-24 md:py-6 px-4 sm:px-6 lg:px-8">
          <!-- Flash Messages Container -->
          <div id="flash-container">
            <%= render partial: "shared/flash", locals: { notice: notice, alert: alert } %>
          </div>

          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
